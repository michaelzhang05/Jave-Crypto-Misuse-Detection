<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/small_text_size"
        android:id="@+id/tv_switch_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/switch_label_margin_top"
        android:layout_marginBottom="@dimen/spacing_small"
        android:text="@string/purposes"
        android:textAllCaps="true"
        android:layout_marginStart="@dimen/spacing_medium"
        app:layout_constraintBottom_toTopOf="@+id/item_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/item_divider"
        android:background="@color/colorGrey"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_switch_label"/>
</androidx.constraintlayout.widget.ConstraintLayout>
