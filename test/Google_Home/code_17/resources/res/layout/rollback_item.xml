<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/ripple_bg_card"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_icon_rollback_item"
        android:layout_width="@dimen/icon_size_l"
        android:layout_height="@dimen/icon_size_l"
        android:adjustViewBounds="true"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:layout_marginEnd="@dimen/margin_m"
        app:srcCompat="@drawable/vector_uptodown_logo_bag_disabled"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_m"
        android:layout_toStartOf="@+id/tv_size_rollback_item"
        android:layout_toEndOf="@+id/iv_icon_rollback_item">
        <TextView
            android:textSize="@dimen/font_size_16"
            android:textColor="@color/text_primary"
            android:ellipsize="end"
            android:id="@+id/tv_name_rollback_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"/>
        <TextView
            android:textSize="@dimen/text_size_m"
            android:textColor="@color/main_blue"
            android:ellipsize="end"
            android:id="@+id/tv_version_rollback_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_s"
            android:maxLines="1"
            android:lines="1"/>
    </LinearLayout>
    <TextView
        android:textSize="@dimen/text_size_m"
        android:textColor="@color/text_terciary"
        android:ellipsize="end"
        android:id="@+id/tv_size_rollback_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zero_mb"
        android:maxLines="1"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/margin_m"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
