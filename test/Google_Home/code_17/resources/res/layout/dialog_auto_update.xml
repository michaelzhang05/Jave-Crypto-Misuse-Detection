<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/splash_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_auto_update"
            android:background="@drawable/shape_bg_wizard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_xl"
            android:layout_marginTop="?android:attr/actionBarSize"
            android:layout_marginRight="@dimen/margin_xl">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/iv_logo_auto_update"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="@dimen/margin_xl"
                android:contentDescription="@null"
                app:srcCompat="@drawable/vector_uptodown_logo_bag"/>
            <TextView
                android:textSize="@dimen/text_size_xl"
                android:textColor="@color/text_primary"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tv_title_auto_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_l"
                android:text="@string/app_name"
                android:maxLines="1"
                android:lines="1"/>
            <TextView
                android:textSize="@dimen/text_size_m"
                android:textColor="@color/text_secundary"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tv_desc_auto_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_s"
                android:text="@string/dialog_updates_available"
                android:layout_marginStart="@dimen/margin_s"
                android:layout_marginEnd="@dimen/margin_s"/>
            <TextView
                android:textSize="@dimen/text_size_m"
                android:textColor="@color/text_secundary"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tv_installed_version_auto_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/autoupdate_installed_version"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"/>
            <TextView
                android:textSize="@dimen/text_size_xl"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tv_update_version_auto_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_m"
                android:text="@string/autoupdate_update_version"/>
            <TextView
                android:textSize="@dimen/text_size_m"
                android:textColor="@color/main_blue"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tv_update_size_auto_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_s"
                android:text="@string/autoupdate_update_size"/>
            <RelativeLayout
                android:layout_gravity="center_horizontal"
                android:id="@+id/rl_uptodown_version_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_l">
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/ll_uptodown_version_details_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">
                    <TextView
                        android:textSize="@dimen/text_size_m"
                        android:textColor="@color/text_primary"
                        android:id="@+id/tv_uptodown_version_details_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_detail_whats_new"
                        android:lines="1"/>
                    <ImageView
                        android:id="@+id/iv_uptodown_version_details_label"
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:contentDescription="@null"
                        android:layout_marginStart="@dimen/margin_m"
                        app:srcCompat="@drawable/vector_arrow_down_expand"/>
                </LinearLayout>
                <TextView
                    android:textSize="@dimen/text_size_m"
                    android:textColor="@color/text_secundary"
                    android:gravity="center"
                    android:id="@+id/tv_uptodown_version_details"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_m"
                    android:layout_below="@+id/ll_uptodown_version_details_label"/>
            </RelativeLayout>
            <RelativeLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/rl_update"
                android:background="@drawable/ripple_blue_primary_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_l">
                <TextView
                    android:textSize="@dimen/text_size_xl"
                    android:textColor="@color/white"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:id="@+id/tv_update"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="@string/updates_button_update_app"
                    android:maxLines="1"/>
            </RelativeLayout>
            <RelativeLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/rl_cancel"
                android:background="@drawable/ripple_wizard_button"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_xl">
                <TextView
                    android:textSize="@dimen/text_size_m"
                    android:textColor="@drawable/selector_category_text_color"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:id="@+id/tv_cancel"
                    android:padding="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@android:string/cancel"
                    android:maxLines="1"/>
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:textSize="@dimen/text_size_m"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/tv_info_auto_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_xl"
            android:layout_marginTop="@dimen/margin_l"
            android:layout_marginRight="@dimen/margin_xl"
            android:layout_marginBottom="@dimen/margin_l"
            android:text="@string/msg_help_autoupdate"/>
    </LinearLayout>
</ScrollView>
