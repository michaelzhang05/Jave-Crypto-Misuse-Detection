<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/main_scrollable"/>
    <RelativeLayout
        android:id="@+id/rl_container_error_no_connection"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/floating_queue"/>
    <RelativeLayout
        android:id="@+id/rl_wizard"
        android:background="@drawable/splash_background"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:id="@+id/rl_splash"
        android:background="@drawable/splash_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_splash_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:contentDescription="@null"
            app:srcCompat="@drawable/vector_uptodown_logo_bag_transp"/>
        <ImageView
            android:id="@+id/iv_splash_uptodown_app_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/iv_splash_logo"
            android:layout_centerInParent="true"
            android:contentDescription="@null"
            app:srcCompat="@drawable/vector_uptodown_app_store_white"/>
        <ProgressBar
            android:id="@+id/pb_splash"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_splash_uptodown_app_store"
            android:layout_centerHorizontal="true"
            android:indeterminateTint="@color/main_blue"
            style="?android:attr/progressBarStyleSmall"/>
    </RelativeLayout>
    <include
        android:id="@+id/app_info_selected_popup"
        android:visibility="gone"
        layout="@layout/app_info_selected"/>
    <FrameLayout
        android:id="@+id/fl_sign_in_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
    <FrameLayout
        android:id="@+id/fl_uptodown_turbo_popup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>
