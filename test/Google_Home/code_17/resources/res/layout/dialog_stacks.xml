<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/stacks_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/toolbar_container"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/toolbar_main"/>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/sv_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/line_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_container">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/medium_text_size"
                android:id="@+id/tv_stack_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_medium"
                android:text="@string/stack_name"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_switch_item_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <View
        android:id="@+id/line_item"
        android:background="@color/colorGrey"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        app:layout_constraintBottom_toTopOf="@+id/btn_agree_to_all"
        app:layout_constraintTop_toBottomOf="@+id/sv_container"/>
    <Button
        android:id="@+id/btn_agree_to_all"
        android:text="@string/agree_to_all"
        android:layout_marginEnd="@dimen/spacing_small"
        app:layout_constraintEnd_toStartOf="@+id/btn_disagree_to_all"
        app:layout_constraintTop_toTopOf="@+id/btn_disagree_to_all"
        style="@style/BlueGrayButtonStyle"/>
    <Button
        android:id="@+id/btn_disagree_to_all"
        android:layout_margin="@dimen/spacing_small"
        android:text="@string/disagree_to_all"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line_item"
        style="@style/BlueGrayButtonStyle"/>
</androidx.constraintlayout.widget.ConstraintLayout>
