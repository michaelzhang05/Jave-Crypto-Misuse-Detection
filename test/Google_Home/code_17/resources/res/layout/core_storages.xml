<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_path"
        android:focusable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_centerVertical="true"
        android:contentDescription="@null"/>
    <RelativeLayout
        android:id="@+id/rl_contenedor_path"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/rb_path"
        android:layout_toEndOf="@+id/iv_path">
        <TextView
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:gravity="start|center_vertical"
            android:id="@+id/tv_path_name"
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:lines="2"/>
        <TextView
            android:textSize="10sp"
            android:textColor="@color/text_secundary"
            android:id="@+id/tv_path_detail"
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_path_name"/>
    </RelativeLayout>
    <RadioButton
        android:id="@+id/rb_path"
        android:focusable="false"
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"/>
    <View
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/rl_contenedor_path"/>
</RelativeLayout>
