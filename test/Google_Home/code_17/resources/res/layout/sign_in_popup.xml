<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="@null"
        android:layout_marginStart="-70dp"
        app:srcCompat="@drawable/vector_box_decor_popup"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_content_sign_in_popup"
        android:background="@drawable/shadow_popup"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/shape_bottom_download_button_bg"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/icon_size_s"
                android:layout_height="@dimen/icon_size_s"
                android:contentDescription="@null"
                app:srcCompat="@drawable/vector_logo_google"/>
            <TextView
                android:textSize="@dimen/text_size_m"
                android:textColor="@color/text_primary"
                android:ellipsize="end"
                android:id="@+id/tv_title_sign_in_popup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_l"
                android:layout_marginRight="@dimen/margin_l"
                android:text="@string/reminder_login_title"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/iv_close_sign_in_popup"
                android:layout_width="@dimen/icon_size_s"
                android:layout_height="@dimen/icon_size_s"
                android:contentDescription="@string/close"
                app:srcCompat="@drawable/vector_cross_adaptable"/>
        </LinearLayout>
        <View
            android:background="@color/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:background="@drawable/shape_bg_body_sign_in_pop_up"
            android:paddingLeft="@dimen/margin_m"
            android:paddingRight="@dimen/margin_m"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/text_size_m"
                android:textColor="@color/text_secundary"
                android:id="@+id/tv_description_sign_in_popup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_l"
                android:text="@string/reminder_login_msg_1"
                android:layout_toStartOf="@+id/iv_background_sign_in_popup"/>
            <TextView
                android:textSize="@dimen/text_size_l"
                android:textColor="@color/text_primary"
                android:id="@+id/tv_footer_sign_in_popup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_m"
                android:text="@string/reminder_login_msg_2"
                android:layout_below="@+id/tv_description_sign_in_popup"
                android:layout_toStartOf="@+id/iv_background_sign_in_popup"/>
            <ImageView
                android:id="@+id/iv_background_sign_in_popup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_m"
                android:contentDescription="@null"
                android:layout_alignParentEnd="true"
                app:srcCompat="@drawable/vector_background_sign_in_popup"/>
            <TextView
                android:textSize="@dimen/text_size_s"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/tv_continue_sign_in_popup"
                android:background="@drawable/ripple_blue_primary_button"
                android:padding="@dimen/margin_m"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_l"
                android:layout_marginBottom="@dimen/margin_m"
                android:text="@string/reminder_login_action"
                android:layout_below="@+id/tv_footer_sign_in_popup"
                android:textAllCaps="true"/>
        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="@dimen/margin_l"
        android:contentDescription="@null"
        android:layout_marginEnd="@dimen/margin_xl"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/vector_box_decor_popup"/>
</RelativeLayout>
