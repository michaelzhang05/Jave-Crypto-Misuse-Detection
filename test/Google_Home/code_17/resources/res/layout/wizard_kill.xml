<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/splash_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/rl_header_wk"
        layout="@layout/wizard_header"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/ll_header_wizard_kill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/rl_header_wk">
        <TextView
            android:textSize="@dimen/text_size_xl"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/tv_title_wizard_kill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_important"/>
        <TextView
            android:textSize="@dimen/text_size_m"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/tv_slogan_to_wizard_kill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/core_kill_this_app"/>
    </LinearLayout>
    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/ll_options_wizard_kill"
        android:background="@drawable/shape_bg_tasks_wizard_kill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/tv_slide_wizard_kill"
        android:layout_below="@+id/ll_header_wizard_kill"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">
        <ImageView
            android:id="@+id/iv_screenshot_kill"
            android:padding="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/iv_apps_recents_kill"
            app:srcCompat="@drawable/shape_task_placeholder_wizard_kill"/>
        <ImageView
            android:id="@+id/iv_tap_screen_kill"
            android:layout_width="@dimen/icon_size_m"
            android:layout_height="@dimen/icon_size_m"
            android:layout_centerInParent="true"
            android:contentDescription="@null"
            app:srcCompat="@drawable/shape_circular_wizard_kill"/>
        <ImageView
            android:id="@+id/iv_apps_recents_kill"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="@null"
            app:srcCompat="@drawable/vector_apps_placeholder_wizard_kill"/>
    </RelativeLayout>
    <TextView
        android:textSize="@dimen/text_size_l"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/tv_slide_wizard_kill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kill_this_app_slide"
        android:layout_above="@+id/tv_accept_wizard_kill"
        android:layout_centerInParent="true"/>
    <TextView
        android:textSize="@dimen/text_size_xl"
        android:textColor="@color/selector_wizard_back_button_text"
        android:gravity="center"
        android:id="@+id/tv_accept_wizard_kill"
        android:background="@drawable/selector_wizard_back_button"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:paddingRight="30dp"
        android:paddingBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/ok"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
