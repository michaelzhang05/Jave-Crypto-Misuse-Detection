<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:divider="@drawable/shape_dialog_options_divider"
    android:showDividers="middle">
    <TextView
        android:textSize="16sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/tv_title_dfo"
        android:background="@drawable/bg_dialog_title"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/text_primary"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/tv_copy"
        android:background="@drawable/core_ripple_bg"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/core_action_copy"
        android:maxLines="1"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/text_primary"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/tv_cut"
        android:background="@drawable/core_ripple_bg"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/core_action_cut"
        android:maxLines="1"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/text_primary"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/tv_delete"
        android:background="@drawable/core_ripple_bg"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/option_button_delete"
        android:maxLines="1"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/text_primary"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/tv_open_with"
        android:background="@drawable/core_ripple_bg"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/option_button_open_with"
        android:maxLines="1"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/text_primary"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/tv_compress"
        android:background="@drawable/core_ripple_bg"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:focusable="true"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/core_compress"
        android:maxLines="1"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/text_primary"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/tv_decompress"
        android:background="@drawable/core_ripple_bg"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:focusable="true"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/core_decompress_dialog_title"
        android:maxLines="1"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/text_primary"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/tv_share"
        android:background="@drawable/core_ripple_bg"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/option_button_share"
        android:maxLines="1"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/text_primary"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/tv_send_nsd"
        android:background="@drawable/core_ripple_bg"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nsd_option_send_to"
        android:maxLines="1"/>
</LinearLayout>
