<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:theme="@style/UptodownToolbarTheme"
        android:id="@+id/toolbar_avatar_activity"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">
        <TextView
            android:id="@+id/tv_toolbar_title_avatar_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/avatar_activity_toolbar_title"
            style="@style/UptodownToolbarStyle"/>
    </androidx.appcompat.widget.Toolbar>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_avatar_activity">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="@dimen/text_size_l"
                android:textColor="@color/text_primary"
                android:ellipsize="end"
                android:id="@+id/tv_title_avatar_activity"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_m"
                android:layout_marginTop="@dimen/margin_l"
                android:layout_marginRight="@dimen/margin_m"
                android:text="@string/avatar_activity_title"
                android:maxLines="1"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/ll_turbo_separator_avatar_activity"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_l"
                android:layout_below="@+id/tv_title_avatar_activity">
                <TextView
                    android:textSize="@dimen/text_size_l"
                    android:textColor="@color/text_primary"
                    android:ellipsize="end"
                    android:id="@+id/tv_turbo_avatar_title_avatar_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_m"
                    android:layout_marginRight="@dimen/margin_m"
                    android:text="@string/turbo_avatars"
                    android:maxLines="1"/>
                <ImageView
                    android:id="@+id/iv_turbo_avatar_title_avatar_activity"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    app:srcCompat="@drawable/vector_turbo"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_turbo_avatar_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_l"
                android:layout_below="@+id/ll_turbo_separator_avatar_activity"
                android:nestedScrollingEnabled="false"/>
            <TextView
                android:textSize="@dimen/text_size_l"
                android:textColor="@color/text_primary"
                android:ellipsize="end"
                android:id="@+id/tv_avatars_title_avatar_activity"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_m"
                android:layout_marginRight="@dimen/margin_m"
                android:text="@string/avatars"
                android:maxLines="1"
                android:layout_below="@+id/rv_turbo_avatar_activity"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_avatar_activity"
                android:paddingBottom="100dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_m"
                android:layout_marginTop="@dimen/margin_l"
                android:layout_marginRight="@dimen/margin_m"
                android:layout_below="@+id/tv_avatars_title_avatar_activity"
                android:nestedScrollingEnabled="false"/>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
    <TextView
        android:textSize="@dimen/text_size_l"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_save_avatar_activity"
        android:background="@drawable/ripple_blue_primary_button"
        android:paddingTop="@dimen/margin_m"
        android:paddingBottom="@dimen/margin_m"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_l"
        android:layout_marginTop="@dimen/margin_m"
        android:layout_marginRight="@dimen/margin_l"
        android:layout_marginBottom="@dimen/margin_l"
        android:text="@string/save_gdpr"
        android:layout_alignParentBottom="true"
        android:textAlignment="center"/>
    <include
        android:id="@+id/loading_view_avatar"
        layout="@layout/loading_view"/>
</RelativeLayout>
