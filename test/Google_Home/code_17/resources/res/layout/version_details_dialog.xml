<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/text_size_xl"
        android:textColor="@color/text_primary"
        android:id="@+id/tv_title_vd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/version_details"/>
    <TextView
        android:textSize="@dimen/text_size_m"
        android:textColor="@color/text_secundary"
        android:id="@+id/tv_label_app_name_vd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/version_details_name_label"/>
    <TextView
        android:textSize="@dimen/text_size_m"
        android:textColor="@color/main_blue"
        android:ellipsize="end"
        android:id="@+id/tv_app_name_vd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"/>
    <TextView
        android:textSize="@dimen/text_size_m"
        android:textColor="@color/text_secundary"
        android:id="@+id/tv_label_installed_version_vd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/version_details_installed_version_label"/>
    <TextView
        android:textSize="@dimen/text_size_m"
        android:textColor="@color/main_blue"
        android:ellipsize="end"
        android:id="@+id/tv_installed_version_vd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"/>
    <TextView
        android:textSize="@dimen/text_size_m"
        android:textColor="@color/text_secundary"
        android:id="@+id/tv_label_update_version_vd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/version_details_update_version_label"/>
    <TextView
        android:textSize="@dimen/text_size_m"
        android:textColor="@color/main_blue"
        android:ellipsize="end"
        android:id="@+id/tv_update_version_vd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"/>
    <TextView
        android:textSize="@dimen/text_size_m"
        android:textColor="@color/text_secundary"
        android:id="@+id/tv_label_packagename_vd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/version_details_packagename_label"/>
    <TextView
        android:textSize="@dimen/text_size_m"
        android:textColor="@color/main_blue"
        android:ellipsize="end"
        android:id="@+id/tv_packagename_vd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"/>
    <TextView
        android:textSize="@dimen/text_size_m"
        android:textColor="@color/text_secundary"
        android:id="@+id/tv_label_size_vd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/version_details_size_label"/>
    <TextView
        android:textSize="@dimen/text_size_m"
        android:textColor="@color/main_blue"
        android:ellipsize="end"
        android:id="@+id/tv_size_vd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"/>
    <TextView
        android:textSize="@dimen/text_size_m"
        android:textColor="@color/text_secundary"
        android:id="@+id/tv_label_filename_vd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/version_details_filename_label"/>
    <TextView
        android:textSize="@dimen/text_size_m"
        android:textColor="@color/main_blue"
        android:ellipsize="end"
        android:id="@+id/tv_filename_vd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"/>
    <TextView
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_version_details_accept"
        android:background="@drawable/ripple_blue_primary_button"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:text="@string/ok"/>
</LinearLayout>
