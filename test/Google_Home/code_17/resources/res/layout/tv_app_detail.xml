<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/text_size_m"
            android:textColor="@color/main_dark_grey"
            android:id="@+id/tv_percent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="30%"/>
        <ProgressBar
            android:id="@+id/pb_download"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="36dp"
            style="@style/ProgressBarDownloading"/>
        <TextView
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/main_dark_grey"
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:maxLines="1"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/accent_green"
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.35"/>
            <TextView
                android:textColor="@color/main_light_grey"
                android:id="@+id/tv_autor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Autor"
                android:layout_marginStart="12dp"/>
        </LinearLayout>
        <TextView
            android:textSize="@dimen/text_size_l"
            android:textColor="@color/main_dark_grey"
            android:id="@+id/tv_short_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="desc corta"/>
        <RelativeLayout
            android:gravity="center_vertical"
            android:id="@+id/rl_contaier_valoration_tv_app_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="30sp"
                android:textColor="@color/black"
                android:ellipsize="end"
                android:id="@+id/tv_valoration_value_tv_app_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.4"
                android:maxLines="1"
                android:lines="1"
                android:layout_centerHorizontal="true"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll_stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_below="@+id/tv_valoration_value_tv_app_detail"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:id="@+id/iv_star1"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:contentDescription="@null"
                    app:srcCompat="@drawable/vector_star_off"/>
                <ImageView
                    android:id="@+id/iv_star2"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:contentDescription="@null"
                    app:srcCompat="@drawable/vector_star_off"/>
                <ImageView
                    android:id="@+id/iv_star3"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:contentDescription="@null"
                    app:srcCompat="@drawable/vector_star_off"/>
                <ImageView
                    android:id="@+id/iv_star4"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:contentDescription="@null"
                    app:srcCompat="@drawable/vector_star_off"/>
                <ImageView
                    android:id="@+id/iv_star5"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:contentDescription="@null"
                    app:srcCompat="@drawable/vector_star_off"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_below="@+id/ll_stars"
                android:layout_centerHorizontal="true">
                <TextView
                    android:textSize="@dimen/text_size_m"
                    android:textColor="@color/black"
                    android:id="@+id/tv_num_ratings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23"/>
                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_centerVertical="true"
                    android:contentDescription="@null"
                    android:layout_marginStart="3dp"
                    android:layout_toEndOf="@+id/tv_num_ratings"
                    app:srcCompat="@drawable/vector_male_shadow"/>
            </RelativeLayout>
        </RelativeLayout>
        <TextView
            android:textSize="@dimen/text_size_l"
            android:textColor="@color/main_dark_grey"
            android:id="@+id/tv_screenshots_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/screenshots_title"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll_screenshots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </HorizontalScrollView>
        <TextView
            android:textSize="@dimen/text_size_m"
            android:textColor="@color/main_dark_grey"
            android:id="@+id/tv_overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="desc larga"/>
        <TextView
            android:textSize="@dimen/text_size_l"
            android:textColor="@color/main_dark_grey"
            android:id="@+id/tv_related_post_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_detail_articles_title"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll_related_posts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </HorizontalScrollView>
        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</ScrollView>
