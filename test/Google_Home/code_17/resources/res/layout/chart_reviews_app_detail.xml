<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ll_container_reviews_app_detail"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/text_size_l"
        android:textColor="@color/text_primary"
        android:id="@+id/tv_reviews_title_app_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_l"
        android:text="@string/app_detail_reviews_title"
        android:textAllCaps="false"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="80sp"
            android:textColor="@color/main_light_grey"
            android:id="@+id/tv_review_rating_app_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_m"
            android:layout_marginRight="@dimen/margin_m"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/tv_review_rating_app_detail">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/text_size_xs"
                    android:textColor="@color/main_light_grey"
                    android:id="@+id/tv_chart_5_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:layout_marginEnd="@dimen/margin_m"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin_m">
                    <View
                        android:id="@+id/star5_graphical_value_app_detail_background"
                        android:background="@drawable/shape_bg_review_bars_background"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>
                    <View
                        android:id="@+id/star5_graphical_value_app_detail"
                        android:background="@drawable/shape_bg_blue_primary"
                        android:layout_width="150dp"
                        android:layout_height="10dp"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/text_size_xs"
                    android:textColor="@color/main_light_grey"
                    android:id="@+id/tv_chart_4_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:layout_marginEnd="@dimen/margin_m"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin_m">
                    <View
                        android:background="@drawable/shape_bg_review_bars_background"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>
                    <View
                        android:id="@+id/star4_graphical_value_app_detail"
                        android:background="@drawable/shape_bg_blue_primary"
                        android:layout_width="30dp"
                        android:layout_height="10dp"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/text_size_xs"
                    android:textColor="@color/main_light_grey"
                    android:id="@+id/tv_chart_3_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:layout_marginEnd="@dimen/margin_m"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin_m">
                    <View
                        android:background="@drawable/shape_bg_review_bars_background"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>
                    <View
                        android:id="@+id/star3_graphical_value_app_detail"
                        android:background="@drawable/shape_bg_blue_primary"
                        android:layout_width="20dp"
                        android:layout_height="10dp"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/text_size_xs"
                    android:textColor="@color/main_light_grey"
                    android:id="@+id/tv_chart_2_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:layout_marginEnd="@dimen/margin_m"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin_m">
                    <View
                        android:background="@drawable/shape_bg_review_bars_background"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>
                    <View
                        android:id="@+id/star2_graphical_value_app_detail"
                        android:background="@drawable/shape_bg_blue_primary"
                        android:layout_width="10dp"
                        android:layout_height="10dp"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/text_size_xs"
                    android:textColor="@color/main_light_grey"
                    android:id="@+id/tv_chart_1_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:layout_marginEnd="@dimen/margin_m"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin_m">
                    <View
                        android:background="@drawable/shape_bg_review_bars_background"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>
                    <View
                        android:id="@+id/star1_graphical_value_app_detail"
                        android:background="@drawable/shape_bg_blue_primary"
                        android:layout_width="55dp"
                        android:layout_height="10dp"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_reviews_counter_chart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:contentDescription="@null"
            app:srcCompat="@drawable/vector_bubble_speech"
            app:tint="@color/main_blue"/>
        <TextView
            android:textSize="@dimen/text_size_m"
            android:textColor="@color/main_blue"
            android:id="@+id/tv_reviews_count_app_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginStart="4dp"/>
    </LinearLayout>
</LinearLayout>
