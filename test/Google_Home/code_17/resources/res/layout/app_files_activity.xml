<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_afa"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"/>
    <RelativeLayout
        android:id="@+id/rl_header_afa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_m"
        android:layout_below="@+id/toolbar_afa">
        <ImageView
            android:id="@+id/iv_logo_afa"
            android:layout_width="@dimen/icon_size_m"
            android:layout_height="@dimen/icon_size_m"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:layout_marginEnd="@dimen/margin_m"
            app:srcCompat="@drawable/vector_uptodown_logo_bag_disabled"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/iv_logo_afa">
            <TextView
                android:textSize="@dimen/text_size_m"
                android:textColor="@color/text_primary"
                android:ellipsize="end"
                android:id="@+id/tv_app_name_afa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:lines="1"/>
            <TextView
                android:textSize="@dimen/text_size_m"
                android:textColor="@color/secondary_grey"
                android:ellipsize="end"
                android:id="@+id/tv_date_afa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_s"
                android:maxLines="1"/>
        </LinearLayout>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_app_files"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_l"
        android:layout_below="@+id/rl_header_afa"/>
    <TextView
        android:textSize="@dimen/text_size_xl"
        android:textColor="@color/black"
        android:gravity="center"
        android:id="@+id/tv_no_data_afa"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/no_data_available"
        android:layout_centerInParent="true"/>
    <include
        android:id="@+id/loading_view_app_files"
        layout="@layout/loading_view"/>
</RelativeLayout>
