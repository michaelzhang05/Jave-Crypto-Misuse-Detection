<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ll_installer_activity"
    android:background="@drawable/bg_instaler_activity"
    android:padding="20dp"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_hide_installer_activity"
            android:background="@drawable/core_ripple_bg"
            android:padding="6dp"
            android:visibility="gone"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="@null"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/core_vector_minimize"/>
        <ImageView
            android:id="@+id/iv_logo_apk_installer_activity"
            android:layout_width="@dimen/xapk_logo_size"
            android:layout_height="@dimen/xapk_logo_size"
            android:layout_centerHorizontal="true"
            android:contentDescription="@null"/>
    </RelativeLayout>
    <TextView
        android:textSize="@dimen/xapk_filename_size"
        android:textColor="@color/text_primary"
        android:ellipsize="middle"
        android:gravity="center"
        android:id="@+id/tv_app_name_installer_activity"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:singleLine="true"/>
    <TextView
        android:textSize="@dimen/xapk_filename_size"
        android:textColor="@color/text_primary"
        android:ellipsize="middle"
        android:gravity="center"
        android:id="@+id/tv_file_name_installer_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:singleLine="true"/>
    <TextView
        android:textSize="@dimen/xapk_filename_size"
        android:textColor="@color/text_primary"
        android:ellipsize="end"
        android:id="@+id/tv_msg_installer_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:maxLines="1"
        android:lines="1"/>
    <ProgressBar
        android:id="@+id/pb_installer_activity"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:indeterminateDrawable="@drawable/core_download_progressbar"
        style="@style/ProgressBarStyle"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/xapk_percentage_size"
            android:textColor="@color/text_secundary"
            android:gravity="center"
            android:id="@+id/tv_percentage_installer_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:textSize="@dimen/xapk_filename_size"
            android:textColor="@color/text_primary"
            android:ellipsize="end"
            android:id="@+id/tv_msg_info_installer_activity"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:maxLines="4"
            android:lines="4"/>
    </FrameLayout>
    <include layout="@layout/ll_new_features"/>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">
        <TextView
            android:textSize="12sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tv_cancel_installer_activity"
            android:background="@drawable/selector_bg_button_main_blue"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_margin="6dp"
            android:text="@string/option_button_cancel"/>
        <TextView
            android:textSize="12sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tv_install_installer_activity"
            android:background="@drawable/selector_bg_button_main_blue"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_margin="6dp"
            android:text="@string/option_button_install"/>
    </LinearLayout>
</LinearLayout>
