<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_video_featured_item"
    android:background="@drawable/ripple_bg_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true">
    <RelativeLayout
        android:id="@+id/rl_video_feature_card"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/home_video_feature_height">
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_youtube_player_view"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/border_radius_m"/>
        <com.uptodown.views.FullHeightImageView
            android:id="@+id/iv_image_video_featured_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="@null"/>
    </RelativeLayout>
    <View
        android:id="@+id/v_player_controller"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_video_feature_height"/>
    <RelativeLayout
        android:id="@+id/rl_video_card_info"
        android:background="@drawable/ripple_bg_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_video_feature_card">
        <RelativeLayout
            android:id="@+id/rl_logo_video_featured_item"
            android:layout_width="@dimen/icon_size_m"
            android:layout_height="@dimen/icon_size_m"
            android:layout_marginTop="@dimen/margin_m"
            android:layout_marginEnd="@dimen/margin_m">
            <ProgressBar
                android:id="@+id/pb_progress_video_featured_item"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:max="100"
                android:progress="0"
                android:indeterminateDrawable="@drawable/progressbar_circular_indeterminate"
                android:progressDrawable="@drawable/progressbar_circular"
                style="?android:attr/progressBarStyleHorizontal"/>
            <ImageView
                android:id="@+id/iv_logo_video_featured_item"
                android:layout_width="@dimen/icon_size_m"
                android:layout_height="@dimen/icon_size_m"
                android:contentDescription="@null"
                app:srcCompat="@drawable/vector_uptodown_logo_bag_disabled"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_s"
            android:layout_toEndOf="@+id/rl_logo_video_featured_item">
            <TextView
                android:id="@+id/tv_name_video_featured_item_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_s"
                style="@style/CardTextViewHolder"/>
            <TextView
                android:id="@+id/tv_name_video_featured_item"
                style="@style/CardNameTextView"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/ll_progress_video_featured_item"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_s"
                android:layout_below="@+id/tv_name_video_featured_item">
                <TextView
                    android:id="@+id/tv_progress_video_featured_item"
                    android:layout_width="match_parent"
                    style="@style/CardNameTextView"/>
                <TextView
                    android:id="@+id/tv_verified_video_featured_item"
                    android:layout_width="match_parent"
                    android:layout_marginTop="1dp"
                    android:text="@string/verified_by_uptodown"
                    android:maxLines="1"
                    android:drawablePadding="2dp"
                    app:drawableStartCompat="@drawable/vector_myappsupdates_dialog_vt_report"
                    style="@style/CardNameTextView"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_desc_video_featured_item_holder"
                android:layout_below="@+id/tv_name_video_featured_item_holder"
                style="@style/CardTextViewHolder"/>
            <TextView
                android:id="@+id/tv_desc_video_featured_item"
                android:layout_below="@+id/tv_name_video_featured_item"
                style="@style/CardDescriptionTextView"/>
            <TextView
                android:id="@+id/tv_status_video_featured_item"
                android:visibility="gone"
                android:layout_below="@+id/tv_name_video_featured_item"
                android:layout_centerHorizontal="false"
                style="@style/TextViewAppInfoStatus"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
