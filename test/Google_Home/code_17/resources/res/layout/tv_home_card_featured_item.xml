<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_home_card_featured_item"
    android:background="@drawable/tv_selector_bg_card"
    android:padding="4dp"
    android:focusable="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_home_card_featured_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/gallery_feature_horizontal_height"
        android:minWidth="@dimen/feature_card_width"
        android:contentDescription="@null"/>
    <ImageView
        android:id="@+id/iv_logo_home_card_featured_item"
        android:layout_width="@dimen/icon_size_m"
        android:layout_height="@dimen/icon_size_m"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:layout_below="@+id/iv_home_card_featured_item"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:layout_marginEnd="10dp"
        app:srcCompat="@drawable/vector_uptodown_logo_bag_disabled"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/iv_home_card_featured_item"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:layout_toEndOf="@+id/iv_logo_home_card_featured_item"
        android:layout_alignEnd="@+id/iv_home_card_featured_item">
        <TextView
            android:textSize="@dimen/text_size_m"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:id="@+id/tv_name_home_card_featured_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:lines="1"
            android:drawablePadding="6dp"/>
        <TextView
            android:textSize="@dimen/text_size_m"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:id="@+id/tv_desc_home_card_featured_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:lines="2"/>
        <TextView
            android:textSize="@dimen/text_size_xs"
            android:ellipsize="end"
            android:id="@+id/tv_status_home_card_featured_item"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:lines="1"
            android:textAllCaps="true"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"/>
    </LinearLayout>
</RelativeLayout>
