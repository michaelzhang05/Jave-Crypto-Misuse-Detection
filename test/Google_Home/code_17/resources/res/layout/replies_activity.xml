<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/background_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_reply"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">
        <TextView
            android:id="@+id/tv_app_name_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/UptodownToolbarStyle"/>
    </androidx.appcompat.widget.Toolbar>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsv_replies"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_reply">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include
                android:id="@+id/review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_m"
                android:layout_marginTop="@dimen/margin_m"
                android:layout_marginRight="@dimen/margin_m"
                layout="@layout/review"/>
            <include
                android:id="@+id/review_turbo"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_m"
                android:layout_marginTop="@dimen/margin_m"
                android:layout_marginRight="@dimen/margin_m"
                layout="@layout/review_turbo"/>
            <RelativeLayout
                android:background="@color/replies_bg_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_l">
                <RelativeLayout
                    android:id="@+id/rl_user_reply"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_user_avatar_reply"
                        android:layout_width="@dimen/icon_size_m"
                        android:layout_height="@dimen/icon_size_m"
                        android:contentDescription="@null"/>
                    <EditText
                        android:textSize="@dimen/text_size_s"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_primary"
                        android:id="@+id/et_reply"
                        android:background="@drawable/shape_bg"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="@string/write_an_answer"
                        android:maxLines="3"
                        android:inputType="text"
                        android:imeOptions="actionDone"
                        android:layout_marginStart="@dimen/margin_m"
                        android:layout_toEndOf="@+id/iv_user_avatar_reply"/>
                    <TextView
                        android:textSize="@dimen/text_size_l"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:id="@+id/tv_send_reply"
                        android:background="@drawable/ripple_blue_primary_button"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_m"
                        android:text="@string/reply"
                        android:layout_below="@+id/et_reply"
                        android:layout_alignStart="@+id/et_reply"/>
                </RelativeLayout>
                <View
                    android:id="@+id/login_wall"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignTop="@+id/rl_user_reply"
                    android:layout_alignBottom="@+id/rl_user_reply"/>
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_reply"
                android:background="@color/replies_bg_color"
                android:paddingTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <TextView
        android:textSize="@dimen/text_size_l"
        android:textColor="@color/text_secundary"
        android:gravity="center"
        android:id="@+id/tv_no_answer"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_m"
        android:layout_marginTop="@dimen/margin_l"
        android:layout_marginRight="@dimen/margin_m"
        android:layout_marginBottom="@dimen/margin_l"
        android:text="@string/no_answer_availables"
        android:layout_below="@+id/nsv_replies"
        android:layout_centerInParent="true"/>
    <include
        android:id="@+id/loading_view_replies"
        layout="@layout/loading_view"/>
</RelativeLayout>
