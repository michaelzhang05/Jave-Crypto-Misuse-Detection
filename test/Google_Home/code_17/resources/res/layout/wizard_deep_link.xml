<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/splash_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_header_info_wizard_deep_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_header_feature_wizard_deep_link">
        <ImageView
            android:id="@+id/iv_logo_wizard_deep_link"
            android:layout_width="@dimen/icon_size_xl"
            android:layout_height="@dimen/icon_size_xl"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="60dp"
            android:contentDescription="@null"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="12dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:layout_toEndOf="@+id/iv_logo_wizard_deep_link">
            <TextView
                android:textSize="22sp"
                android:textColor="@color/text_primary"
                android:ellipsize="end"
                android:id="@+id/tv_name_app_wizard_deep_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"/>
            <TextView
                android:textSize="@dimen/text_size_m"
                android:textColor="@color/main_light_grey"
                android:ellipsize="end"
                android:id="@+id/tv_author_wizard_deep_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:lines="1"
                android:layout_below="@+id/tv_name_app_wizard_deep_link"/>
        </RelativeLayout>
    </RelativeLayout>
    <com.uptodown.views.FullWidthImageView
        android:id="@+id/iv_header_feature_wizard_deep_link"
        android:layout_width="match_parent"
        android:layout_height="170dp"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/ll_header_wizard_deep_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/rl_header_info_wizard_deep_link">
        <TextView
            android:textSize="@dimen/text_size_xl"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/tv_welcome_to_wizard_deep_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wizard_welcome_welcome"/>
        <TextView
            android:textSize="30sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/tv_app_name_wizard_deep_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"/>
        <TextView
            android:textSize="@dimen/text_size_xl"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/tv_slogan_to_wizard_deep_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/wizard_welcome_slogan"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical"
        android:id="@+id/ll_options_wizard_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/tv_accept_wizard_deep_link"
        android:layout_below="@+id/ll_header_wizard_deep_link">
        <RelativeLayout
            android:id="@+id/rl_terms_wizard_deep_link"
            android:background="@drawable/ripple_wizard_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.uptodown.views.ScrollableTextView
                android:textSize="@dimen/text_size_m"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/tv_terms_wizard_deep_link"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp"
                android:text="@string/tos_title"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_privacy_settings_wizard_deep_link"
            android:background="@drawable/ripple_wizard_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <com.uptodown.views.ScrollableTextView
                android:textSize="@dimen/text_size_m"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/tv_privacy_settings_wizard_deep_link"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp"
                android:text="@string/gdpr_title"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:textSize="@dimen/text_size_xl"
        android:textColor="@color/text_color_wizard_button"
        android:gravity="center"
        android:id="@+id/tv_accept_wizard_deep_link"
        android:background="@drawable/selector_wizard_accept_button"
        android:paddingLeft="40dp"
        android:paddingTop="16dp"
        android:paddingRight="40dp"
        android:paddingBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/accept_and_download"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="20dp"/>
</RelativeLayout>
