<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="16dp">
    <TextView
        android:textSize="@dimen/text_size_l"
        android:textColor="@color/text_primary"
        android:gravity="center_horizontal"
        android:id="@+id/tv_title_dialog_backup_result"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/backup_finished"
        android:paddingHorizontal="16dp"/>
    <TextView
        android:textSize="@dimen/text_size_m"
        android:textColor="@color/text_primary"
        android:layout_gravity="center"
        android:id="@+id/tv_msg_dialog_backup_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_m"
        android:layout_marginTop="@dimen/margin_l"
        android:layout_marginRight="@dimen/margin_m"
        android:layout_marginBottom="@dimen/margin_l"
        android:layout_marginHorizontal="@dimen/margin_m"
        android:layout_marginVertical="@dimen/margin_l"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_m"
        android:layout_marginRight="@dimen/margin_m"
        android:layout_marginBottom="@dimen/margin_l"
        android:layout_marginHorizontal="@dimen/margin_m">
        <TextView
            android:id="@+id/tv_share_dialog_backup_result"
            android:text="@string/option_button_share"
            style="@style/DialogButtonsStyle"/>
        <TextView
            android:id="@+id/tv_browse_dialog_backup_result"
            android:text="@string/browse_files"
            android:layout_marginStart="@dimen/margin_m"
            style="@style/DialogButtonsStyle"/>
        <TextView
            android:id="@+id/tv_ok_dialog_backup_result"
            android:text="@string/ok"
            android:layout_marginStart="@dimen/margin_m"
            style="@style/DialogButtonsStyle"/>
    </LinearLayout>
</LinearLayout>
