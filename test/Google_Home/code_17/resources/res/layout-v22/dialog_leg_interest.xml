<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/leg_interest_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/toolbar_container"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/toolbar_main"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_vendors_leg_interest_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/line_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_container"/>
    <View
        android:id="@+id/line_item"
        android:background="@color/colorGrey"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        app:layout_constraintBottom_toTopOf="@+id/btn_object_to_all"
        app:layout_constraintTop_toBottomOf="@+id/rv_vendors_leg_interest_list"/>
    <Button
        android:id="@+id/btn_object_to_all"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/spacing_small"
        android:layout_marginRight="@dimen/spacing_small"
        android:text="@string/object_to_all"
        android:layout_marginHorizontal="@dimen/spacing_small"
        app:layout_constraintBottom_toBottomOf="@+id/btn_remove_objections"
        app:layout_constraintEnd_toStartOf="@+id/btn_remove_objections"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_remove_objections"
        style="@style/BlueGrayButtonStyle"/>
    <Button
        android:id="@+id/btn_remove_objections"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_marginBottom="@dimen/spacing_small"
        android:text="@string/remove_objections"
        android:layout_marginEnd="@dimen/spacing_small"
        android:layout_marginVertical="@dimen/spacing_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_object_to_all"
        app:layout_constraintTop_toBottomOf="@+id/line_item"
        style="@style/BlueGrayButtonStyle"/>
</androidx.constraintlayout.widget.ConstraintLayout>
