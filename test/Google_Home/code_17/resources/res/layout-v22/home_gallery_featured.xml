<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_m"
    android:animateLayoutChanges="true">
    <RelativeLayout
        android:id="@+id/rl_title_home_gallery_featured"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_m">
        <TextView
            android:textSize="@dimen/text_size_l"
            android:textColor="@color/text_primary"
            android:ellipsize="end"
            android:id="@+id/tv_title_home_gallery_featured"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:lines="1"
            android:layout_marginEnd="@dimen/margin_m"/>
        <ImageView
            android:id="@+id/iv_more_home_gallery_featured"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:layout_marginEnd="@dimen/margin_m"
            android:layout_toEndOf="@+id/tv_title_home_gallery_featured"
            app:srcCompat="@drawable/vector_arrow_right"/>
    </RelativeLayout>
    <RelativeLayout
        android:background="@drawable/ripple_bg_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_m">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_screenshots_home_gallery_featured"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"/>
        <RelativeLayout
            android:id="@+id/rl_gallery_featured_item"
            android:paddingLeft="@dimen/margin_m"
            android:paddingTop="8dp"
            android:paddingRight="@dimen/margin_m"
            android:paddingBottom="8dp"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rv_screenshots_home_gallery_featured"
            android:paddingHorizontal="@dimen/margin_m">
            <RelativeLayout
                android:id="@+id/rl_logo_gallery_featured_item"
                android:layout_width="@dimen/icon_size_m"
                android:layout_height="@dimen/icon_size_m"
                android:layout_marginEnd="@dimen/margin_m">
                <ProgressBar
                    android:id="@+id/pb_progress_gallery_featured_item"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:max="100"
                    android:progress="0"
                    android:indeterminateDrawable="@drawable/progressbar_circular_indeterminate"
                    android:progressDrawable="@drawable/progressbar_circular"
                    style="?android:attr/progressBarStyleHorizontal"/>
                <ImageView
                    android:id="@+id/iv_logo_gallery_featured_item"
                    android:layout_width="@dimen/icon_size_m"
                    android:layout_height="@dimen/icon_size_m"
                    android:contentDescription="@null"
                    app:srcCompat="@drawable/vector_uptodown_logo_bag_disabled"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/rl_logo_gallery_featured_item">
                <TextView
                    android:id="@+id/tv_name_gallery_featured_item_holder"
                    android:layout_marginTop="@dimen/margin_s"
                    style="@style/CardTextViewHolder"/>
                <TextView
                    android:id="@+id/tv_name_gallery_featured_item"
                    style="@style/CardNameTextView"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/ll_progress_gallery_featured_item"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_below="@+id/tv_name_gallery_featured_item">
                    <TextView
                        android:id="@+id/tv_progress_gallery_featured_item"
                        android:layout_width="match_parent"
                        style="@style/CardNameTextView"/>
                    <TextView
                        android:id="@+id/tv_verified_gallery_featured_item"
                        android:layout_width="match_parent"
                        android:layout_marginTop="1dp"
                        android:text="@string/verified_by_uptodown"
                        android:maxLines="1"
                        android:drawablePadding="2dp"
                        app:drawableStartCompat="@drawable/vector_myappsupdates_dialog_vt_report"
                        style="@style/CardNameTextView"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_status_gallery_featured_item"
                    android:visibility="gone"
                    android:layout_below="@+id/tv_name_gallery_featured_item"
                    android:layout_centerHorizontal="false"
                    style="@style/TextViewAppInfoStatus"/>
                <TextView
                    android:id="@+id/tv_desc_gallery_featured_item"
                    android:layout_below="@+id/tv_name_gallery_featured_item"
                    style="@style/CardDescriptionTextView"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
