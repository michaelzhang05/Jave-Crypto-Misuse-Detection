<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/ripple_bg_card"
    android:layout_width="@dimen/feature_card_width"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_m"
    android:layout_marginEnd="@dimen/margin_m">
    <com.uptodown.views.FullWidthImageView
        android:id="@+id/iv_image_article"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@null"/>
    <TextView
        android:textSize="@dimen/text_size_m"
        android:textColor="@color/text_secundary"
        android:ellipsize="end"
        android:id="@+id/tv_date_article"
        android:paddingLeft="@dimen/margin_s"
        android:paddingRight="@dimen/margin_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_m"
        android:maxLines="1"
        android:lines="1"
        android:layout_below="@+id/iv_image_article"
        android:layout_alignStart="@+id/iv_image_article"
        android:layout_alignEnd="@+id/iv_image_article"
        android:paddingHorizontal="@dimen/margin_s"/>
    <TextView
        android:textSize="@dimen/text_size_l"
        android:textColor="@color/text_primary"
        android:ellipsize="end"
        android:id="@+id/tv_desc_article"
        android:paddingLeft="@dimen/margin_s"
        android:paddingRight="@dimen/margin_s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_s"
        android:maxLines="2"
        android:layout_below="@+id/tv_date_article"
        android:layout_alignStart="@+id/iv_image_article"
        android:layout_alignEnd="@+id/iv_image_article"
        android:paddingHorizontal="@dimen/margin_s"/>
</RelativeLayout>
