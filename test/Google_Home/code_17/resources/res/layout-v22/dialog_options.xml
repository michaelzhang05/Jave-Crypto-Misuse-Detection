<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/options_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/toolbar_container"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/toolbar_main"/>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/sv_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/line_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_container">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/medium_text_size"
                android:id="@+id/tv_options_description"
                android:background="@drawable/bg_radius_border"
                android:padding="@dimen/spacing_large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_large"
                android:text="@string/options_description"/>
            <TextView
                android:textSize="@dimen/small_text_size"
                android:id="@+id/tv_purposes_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_large"
                android:layout_marginBottom="@dimen/spacing_small"
                android:text="@string/purposes"
                android:textAllCaps="true"
                android:layout_marginStart="@dimen/spacing_medium"/>
            <View
                android:id="@+id/purposes_divider"
                android:background="@color/colorGrey"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_stacks_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_purposes_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"/>
            <TextView
                android:textSize="@dimen/small_text_size"
                android:id="@+id/tv_special_purposes_and_features_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_large"
                android:layout_marginBottom="@dimen/spacing_small"
                android:text="@string/special_features"
                android:textAllCaps="true"
                android:layout_marginStart="@dimen/spacing_medium"/>
            <View
                android:id="@+id/special_features_divider"
                android:background="@color/colorGrey"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_special_features_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"/>
            <FrameLayout
                android:id="@+id/gbc_fragment_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="@dimen/small_text_size"
                android:id="@+id/tv_partners_options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_large"
                android:layout_marginBottom="@dimen/spacing_small"
                android:text="@string/partners"
                android:textAllCaps="true"
                android:layout_marginStart="@dimen/spacing_medium"/>
            <View
                android:id="@+id/partners_divider"
                android:background="@color/colorGrey"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/section_partners"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/medium_text_size"
                    android:id="@+id/tv_partners_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:layout_marginBottom="@dimen/spacing_medium"
                    android:text="@string/partners"
                    android:layout_marginStart="@dimen/spacing_medium"
                    android:layout_marginVertical="@dimen/spacing_medium"/>
                <View
                    android:id="@+id/consent_divider"
                    android:background="@color/colorGrey"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/section_legitimate_int"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/medium_text_size"
                    android:id="@+id/tv_leg_interests_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:layout_marginBottom="@dimen/spacing_medium"
                    android:text="@string/legitimate_interests"
                    android:layout_marginStart="@dimen/spacing_medium"
                    android:layout_marginVertical="@dimen/spacing_medium"/>
                <View
                    android:id="@+id/leg_interests_divider"
                    android:background="@color/colorGrey"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_privacy_policy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium"
                android:layout_marginBottom="@dimen/spacing_medium"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <View
        android:id="@+id/line_item"
        android:background="@color/colorGrey"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        app:layout_constraintBottom_toTopOf="@+id/btn_save_and_exit"
        app:layout_constraintTop_toBottomOf="@+id/sv_container"/>
    <Button
        android:id="@+id/btn_agree_to_all"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/spacing_small"
        android:layout_marginRight="@dimen/spacing_small"
        android:text="@string/agree_to_all"
        android:layout_marginHorizontal="@dimen/spacing_small"
        app:layout_constraintBottom_toBottomOf="@+id/btn_save_and_exit"
        app:layout_constraintEnd_toStartOf="@+id/btn_save_and_exit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_save_and_exit"
        style="@style/BlueGrayButtonStyle"/>
    <Button
        android:id="@+id/btn_save_and_exit"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_marginBottom="@dimen/spacing_small"
        android:text="@string/save_and_exit"
        android:layout_marginEnd="@dimen/spacing_small"
        android:layout_marginVertical="@dimen/spacing_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_agree_to_all"
        app:layout_constraintTop_toBottomOf="@+id/line_item"
        style="@style/BlueGrayButtonStyle"/>
</androidx.constraintlayout.widget.ConstraintLayout>
