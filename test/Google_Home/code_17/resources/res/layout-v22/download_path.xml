<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_path"
        android:focusable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_m"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        app:srcCompat="@drawable/vector_more_info_size"/>
    <RelativeLayout
        android:id="@+id/rl_contenedor_path"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_m"
        android:layout_marginBottom="@dimen/margin_m"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/rb_path"
        android:layout_toEndOf="@+id/iv_path"
        android:layout_marginVertical="@dimen/margin_m">
        <TextView
            android:textSize="@dimen/text_size_m"
            android:textColor="@color/text_primary"
            android:gravity="start|center_vertical"
            android:id="@+id/tv_path_name"
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:lines="2"/>
        <TextView
            android:textSize="@dimen/text_size_s"
            android:textColor="@color/text_secundary"
            android:id="@+id/tv_path_detail"
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_path_name"/>
    </RelativeLayout>
    <RadioButton
        android:id="@+id/rb_path"
        android:focusable="false"
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_m"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:buttonTint="@color/main_blue"/>
    <View
        android:background="@color/main_light_grey"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin_m"
        android:layout_marginRight="@dimen/margin_m"
        android:layout_below="@+id/rl_contenedor_path"
        android:layout_marginHorizontal="@dimen/margin_m"/>
</RelativeLayout>
