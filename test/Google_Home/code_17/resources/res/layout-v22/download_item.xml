<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_download_item"
    android:background="@drawable/ripple_bg_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true">
    <RelativeLayout
        android:id="@+id/rl_icon_progress_download_item"
        android:layout_width="@dimen/icon_size_l"
        android:layout_height="@dimen/icon_size_l">
        <ProgressBar
            android:id="@+id/pb_progress_download_item"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:max="100"
            android:progress="0"
            android:indeterminateDrawable="@drawable/progressbar_circular_indeterminate"
            android:progressDrawable="@drawable/progressbar_circular"
            style="?android:attr/progressBarStyleHorizontal"/>
        <ImageView
            android:id="@+id/iv_icon_download_item"
            android:layout_width="@dimen/icon_size_l"
            android:layout_height="@dimen/icon_size_l"
            android:adjustViewBounds="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            app:srcCompat="@drawable/vector_uptodown_logo_bag_disabled"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_m"
        android:layout_marginRight="@dimen/margin_m"
        android:layout_toStartOf="@+id/rl_container_options_download_item"
        android:layout_toEndOf="@+id/rl_icon_progress_download_item"
        android:layout_marginHorizontal="@dimen/margin_m">
        <TextView
            android:textSize="@dimen/font_size_16"
            android:textColor="@color/text_primary"
            android:ellipsize="middle"
            android:id="@+id/tv_name_download_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"/>
        <LinearLayout
            android:id="@+id/ll_info_download_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/tv_name_download_item"
            android:layout_centerVertical="true">
            <TextView
                android:textSize="@dimen/text_size_m"
                android:textColor="@color/text_secundary"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_version_download_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_marginEnd="@dimen/margin_s"/>
            <TextView
                android:id="@+id/tv_info_download_item"
                android:layout_marginTop="0dp"
                style="@style/TextViewAppInfoStatus"/>
        </LinearLayout>
        <TextView
            android:textSize="@dimen/text_size_m"
            android:textColor="@color/text_secundary"
            android:ellipsize="end"
            android:id="@+id/tv_size_download_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:maxLines="1"
            android:layout_below="@+id/ll_info_download_item"
            android:layout_toEndOf="@+id/tv_date_download_item"/>
        <TextView
            android:textSize="@dimen/text_size_m"
            android:textColor="@color/text_secundary"
            android:ellipsize="end"
            android:id="@+id/tv_date_download_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:maxLines="1"
            android:layout_below="@+id/ll_info_download_item"
            android:layout_marginEnd="@dimen/margin_s"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_container_options_download_item"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true">
        <ImageView
            android:id="@+id/iv_cancel_download_item"
            android:background="@drawable/ripple_bg"
            android:padding="@dimen/margin_m"
            android:visibility="visible"
            android:layout_width="@dimen/icon_size_m"
            android:layout_height="@dimen/icon_size_m"
            android:layout_centerVertical="true"
            android:contentDescription="@string/action_cancel_download"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/core_vector_cross"/>
        <ImageView
            android:id="@+id/iv_resume_download_item"
            android:background="@drawable/ripple_bg"
            android:padding="@dimen/margin_m"
            android:visibility="invisible"
            android:layout_width="@dimen/icon_size_m"
            android:layout_height="@dimen/icon_size_m"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/vector_resume_download"/>
    </RelativeLayout>
</RelativeLayout>
