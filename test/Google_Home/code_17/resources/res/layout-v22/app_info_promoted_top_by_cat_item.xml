<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_app_info_top_by_cat_item"
        android:background="@drawable/ripple_bg_card_promoted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_m">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_m"
            android:layout_marginBottom="@dimen/margin_m"
            android:layout_marginVertical="@dimen/margin_m">
            <RelativeLayout
                android:id="@+id/rl_logo_app_info_top_by_cat_item"
                android:layout_width="@dimen/icon_size_xl"
                android:layout_height="@dimen/icon_size_xl"
                android:layout_marginLeft="@dimen/margin_m"
                android:layout_marginRight="@dimen/margin_m"
                android:layout_marginBottom="@dimen/margin_m"
                android:layout_marginHorizontal="@dimen/margin_m">
                <ProgressBar
                    android:id="@+id/pb_progress_app_info_top_by_cat_item"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:max="100"
                    android:progress="0"
                    android:indeterminateDrawable="@drawable/progressbar_circular_indeterminate"
                    android:progressDrawable="@drawable/progressbar_circular"
                    style="?android:attr/progressBarStyleHorizontal"/>
                <ImageView
                    android:id="@+id/iv_logo_app_info_top_by_cat_item"
                    android:layout_width="@dimen/icon_size_xl"
                    android:layout_height="@dimen/icon_size_xl"
                    android:contentDescription="@null"
                    app:srcCompat="@drawable/shape_bg_placeholder"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/margin_m"
                android:layout_toEndOf="@+id/rl_logo_app_info_top_by_cat_item">
                <TextView
                    android:textSize="@dimen/text_size_l"
                    android:textColor="@color/text_primary"
                    android:ellipsize="end"
                    android:id="@+id/tv_name_app_info_top_by_cat_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"/>
                <TextView
                    android:textSize="@dimen/text_size_m"
                    android:textColor="@color/text_secundary"
                    android:ellipsize="end"
                    android:id="@+id/tv_desc_app_info_top_by_cat_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:layout_above="@+id/tv_action_app_info_top_by_cat_info_item"
                    android:layout_below="@+id/tv_name_app_info_top_by_cat_item"/>
                <TextView
                    android:textSize="@dimen/text_size_s"
                    android:textColor="@color/white"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:id="@+id/tv_action_app_info_top_by_cat_info_item"
                    android:background="@drawable/ripple_blue_primary_button"
                    android:padding="@dimen/margin_m"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/updates_button_download_app"
                    android:lines="1"
                    android:layout_alignParentBottom="true"
                    android:textAllCaps="true"
                    android:layout_alignParentEnd="true"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/ll_download_app_info_top_by_cat_info_item"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name_app_info_top_by_cat_item">
                    <TextView
                        android:textSize="@dimen/text_size_m"
                        android:textColor="@color/text_primary"
                        android:ellipsize="end"
                        android:id="@+id/tv_progress_app_info_top_by_cat_info_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:maxLines="1"
                        android:lines="1"
                        android:layout_marginEnd="@dimen/margin_s"/>
                    <TextView
                        android:textSize="@dimen/text_size_m"
                        android:textColor="@color/text_secundary"
                        android:ellipsize="end"
                        android:id="@+id/tv_verified_app_info_top_by_cat_info_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2.5dp"
                        android:text="@string/verified_by_uptodown"
                        android:maxLines="1"
                        android:lines="1"
                        android:drawablePadding="@dimen/margin_s"
                        android:layout_marginEnd="@dimen/margin_s"
                        app:drawableStartCompat="@drawable/vector_myappsupdates_dialog_vt_report"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:textSize="8sp"
        android:textColor="@color/promoted_app_badge_text"
        android:ellipsize="end"
        android:id="@+id/tv_badge_promoted"
        android:background="@drawable/shape_background_badge_promoted"
        android:paddingLeft="@dimen/margin_m"
        android:paddingTop="5dp"
        android:paddingRight="@dimen/margin_m"
        android:paddingBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_m"
        android:layout_marginRight="@dimen/margin_m"
        android:maxWidth="200dp"
        android:text="@string/uptodown_recomends"
        android:maxLines="1"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="@dimen/margin_m"
        android:paddingHorizontal="@dimen/margin_m"
        android:paddingVertical="5dp"/>
</RelativeLayout>
