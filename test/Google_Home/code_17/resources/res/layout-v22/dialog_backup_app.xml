<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/text_size_l"
        android:textColor="@color/text_primary"
        android:gravity="center"
        android:id="@+id/tv_title_dialog_backup_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_l"
        android:text="@string/dialog_title_backup"/>
    <TextView
        android:textSize="@dimen/text_size_m"
        android:textColor="@color/text_primary"
        android:id="@+id/tv_name_dialog_backup_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_l"/>
    <ProgressBar
        android:id="@+id/progressbar_dialog_backup_app"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/margin_s"
        style="@style/ProgressBarDownloading"/>
    <TextView
        android:textSize="@dimen/text_size_l"
        android:textColor="@color/text_primary"
        android:id="@+id/tv_percentage_dialog_backup_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_l"
        android:text="0%"/>
    <TextView
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_cancel_dialog_backup_app"
        android:layout_marginTop="@dimen/margin_m"
        android:layout_marginBottom="@dimen/margin_m"
        android:text="@string/option_button_cancel"
        android:layout_marginVertical="@dimen/margin_m"
        style="@style/DialogButtonsStyle"/>
</LinearLayout>
