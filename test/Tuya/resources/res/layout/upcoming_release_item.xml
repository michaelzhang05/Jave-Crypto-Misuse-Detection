<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_container_upcoming_release_item"
        android:background="@drawable/ripple_bg_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/tv_action_upcoming_release_item">
        <ImageView
            android:id="@+id/iv_icon_upcoming_release_item"
            android:layout_width="@dimen/icon_size_l"
            android:layout_height="@dimen/icon_size_l"
            android:adjustViewBounds="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:layout_marginEnd="10dp"
            app:srcCompat="@drawable/vector_uptodown_logo_bag_disabled"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_upcoming_release"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_m"
            android:layout_toEndOf="@+id/iv_icon_upcoming_release_item">
            <TextView
                android:textSize="@dimen/font_size_16"
                android:textColor="@color/text_primary"
                android:ellipsize="end"
                android:id="@+id/tv_name_upcoming_release_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"/>
            <TextView
                android:textSize="@dimen/text_size_m"
                android:textColor="@color/main_blue"
                android:ellipsize="end"
                android:id="@+id/tv_release_date_upcoming_release_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_s"
                android:maxLines="1"
                android:lines="1"/>
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:textSize="@dimen/text_size_s"
        android:textColor="@color/white"
        android:id="@+id/tv_action_upcoming_release_item"
        android:visibility="visible"
        android:layout_width="100dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        style="@style/AutoSizeTextView"/>
</RelativeLayout>
