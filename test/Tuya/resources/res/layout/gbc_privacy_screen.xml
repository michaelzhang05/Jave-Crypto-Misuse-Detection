<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/options_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/toolbar_container"
        app:layout_constraintBottom_toTopOf="@+id/sv_container"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/toolbar_main"/>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/sv_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/line_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_container">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/medium_text_size"
                android:id="@+id/tv_gbc_description"
                android:background="@drawable/bg_radius_border"
                android:padding="@dimen/spacing_large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_large"
                android:text="@string/gbc_description"/>
            <FrameLayout
                android:id="@+id/gbc_fragment_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <View
        android:id="@+id/line_item"
        android:background="@color/colorGrey"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        app:layout_constraintBottom_toTopOf="@+id/btn_save_and_exit"
        app:layout_constraintTop_toBottomOf="@+id/sv_container"/>
    <Button
        android:id="@+id/btn_save_and_exit"
        android:layout_width="0dp"
        android:layout_marginLeft="@dimen/spacing_small"
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_marginRight="@dimen/spacing_small"
        android:layout_marginBottom="@dimen/spacing_small"
        android:text="@string/save_and_exit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line_item"
        style="@style/BlueGrayButtonStyle"/>
</androidx.constraintlayout.widget.ConstraintLayout>
