<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/splash_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/ll_header_wizard_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="20dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@null"
            app:srcCompat="@drawable/vector_uptodown_logo_bag_transp"/>
        <TextView
            android:textSize="@dimen/text_size_xl"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/tv_welcome_to_wizard_continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/wizard_welcome_welcome"/>
        <TextView
            android:textSize="30sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/tv_app_name_wizard_continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"/>
        <View
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:textSize="@dimen/text_size_xl"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/tv_continue_to_wizard_continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/wizard_step_continue"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_option_buttons_wp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentBottom="true">
        <TextView
            android:textSize="@dimen/text_size_xl"
            android:textColor="@color/selector_wizard_back_button_text"
            android:background="@drawable/selector_wizard_back_button"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:paddingRight="30dp"
            android:paddingBottom="10dp"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="@string/back"
            android:layout_weight="1"/>
        <TextView
            android:textSize="@dimen/text_size_xl"
            android:textColor="@color/text_color_wizard_button"
            android:gravity="center"
            android:id="@+id/tv_next_wizard_continue"
            android:background="@drawable/selector_wizard_accept_button"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:paddingRight="30dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="@string/answer_next"
            android:layout_weight="1"
            android:layout_marginEnd="20dp"/>
    </LinearLayout>
</RelativeLayout>
