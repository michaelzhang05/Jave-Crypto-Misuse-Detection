<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/background_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_rollback"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">
        <TextView
            android:id="@+id/tv_title_rollback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rollback_title"
            style="@style/UptodownToolbarStyle"/>
    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:textSize="@dimen/text_size_l"
        android:textColor="@color/text_primary"
        android:id="@+id/tv_subtitle_rollback"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_m"
        android:layout_marginRight="@dimen/margin_m"
        android:text="@string/rollback_subtitle"
        android:layout_below="@+id/toolbar_rollback"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_m"
        android:layout_below="@+id/tv_subtitle_rollback"/>
    <TextView
        android:textSize="@dimen/text_size_l"
        android:textColor="@color/text_secundary"
        android:gravity="center"
        android:id="@+id/tv_no_items"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/msg_checking_device_rollback"
        android:layout_centerInParent="true"/>
    <TextView
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/tv_gdpr_button_rollback"
        android:background="@drawable/ripple_blue_primary_button"
        android:visibility="gone"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="@string/gdpr_set_up"
        android:layout_below="@+id/tv_no_items"
        android:layout_centerHorizontal="true"
        android:textAllCaps="true"/>
    <include
        android:id="@+id/loading_view_rollback"
        layout="@layout/loading_view"/>
</RelativeLayout>
