<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_gallery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:id="@+id/toolbar_gallery"
        android:background="@color/toolbar_low_alpha_color"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_back_gallery"
            android:layout_width="@dimen/icon_size_s"
            android:layout_height="@dimen/icon_size_s"
            android:layout_marginTop="@dimen/margin_m"
            android:layout_marginBottom="@dimen/margin_m"
            android:contentDescription="@null"
            android:layout_marginStart="@dimen/margin_l"
            app:srcCompat="@drawable/vector_arrow_left_white"/>
        <TextView
            android:textSize="@dimen/text_size_l"
            android:textColor="@color/white"
            android:id="@+id/tv_item_count_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_xl"
            android:layout_toEndOf="@+id/iv_back_gallery"/>
    </RelativeLayout>
</RelativeLayout>
