<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/background_color"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_container_stroke_affiliated"
        android:padding="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_container_affiliated"
            android:background="@drawable/shape_bg_affiliated"
            android:padding="@dimen/margin_l"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_icon_affiliated"
                android:layout_width="@dimen/icon_size_m"
                android:layout_height="@dimen/icon_size_m"
                android:contentDescription="@null"
                android:layout_marginEnd="@dimen/margin_m"/>
            <TextView
                android:textSize="@dimen/text_size_l"
                android:id="@+id/tv_title_affiliated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iv_icon_affiliated"/>
            <TextView
                android:textSize="@dimen/text_size_m"
                android:textColor="@color/text_primary"
                android:id="@+id/tv_description_affiliated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title_affiliated"
                android:layout_toEndOf="@+id/iv_icon_affiliated"/>
        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:textSize="@dimen/text_size_s"
        android:textColor="@color/white"
        android:id="@+id/tv_button_affiliated"
        android:padding="@dimen/margin_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        android:layout_below="@+id/rl_container_stroke_affiliated"
        android:textAllCaps="true"
        android:layout_marginEnd="@dimen/margin_m"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
