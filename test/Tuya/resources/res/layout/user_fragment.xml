<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/shape_user_fragment_gradient"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_toolbar_user_fragment"
        android:paddingLeft="@dimen/margin_l"
        android:paddingRight="@dimen/margin_l"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">
        <ImageView
            android:id="@+id/iv_dark_mode_user_fragment"
            android:layout_width="@dimen/icon_size_s"
            android:layout_height="@dimen/icon_size_s"
            android:layout_centerVertical="true"
            android:contentDescription="@string/menu_left_dark_mode"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/vector_dark_mode"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_user_info_user_fragment"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_m"
        android:layout_marginTop="@dimen/margin_m"
        android:layout_marginRight="@dimen/margin_m"
        android:layout_below="@+id/rl_toolbar_user_fragment">
        <RelativeLayout
            android:id="@+id/rl_user_avatar_user_fragment"
            android:background="@drawable/shape_uf_avatar_bg"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:elevation="0dp">
            <ImageView
                android:id="@+id/iv_user_avatar_user_fragment"
                android:padding="@dimen/margin_l"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/profile_title"
                app:srcCompat="@drawable/vector_user_login"/>
        </RelativeLayout>
        <RelativeLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_m"
            android:layout_marginRight="@dimen/margin_m"
            android:layout_alignTop="@+id/rl_user_avatar_user_fragment"
            android:layout_alignBottom="@+id/rl_user_avatar_user_fragment"
            android:layout_toStartOf="@+id/tv_edit_profile_user_fragment"
            android:layout_toEndOf="@+id/rl_user_avatar_user_fragment">
            <com.uptodown.util.views.UsernameTextView
                android:textSize="@dimen/text_size_l"
                android:textColor="@color/text_terciary"
                android:ellipsize="end"
                android:id="@+id/tv_username_user_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_in_sign_up"
                android:lines="1"/>
            <TextView
                android:textSize="@dimen/text_size_s"
                android:textColor="@color/text_quaternary"
                android:ellipsize="end"
                android:id="@+id/tv_registered_ago_user_fragment"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_s"
                android:lines="1"
                android:layout_below="@+id/tv_username_user_fragment"/>
            <TextView
                android:textSize="@dimen/text_size_m"
                android:textColor="@color/text_quaternary"
                android:ellipsize="end"
                android:id="@+id/tv_reviews_counter_user_fragment"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_s"
                android:lines="1"
                android:layout_below="@+id/tv_registered_ago_user_fragment"/>
        </RelativeLayout>
        <TextView
            android:textSize="@dimen/text_size_xs"
            android:textColor="@color/white"
            android:id="@+id/tv_edit_profile_user_fragment"
            android:background="@drawable/ripple_blue_primary_button"
            android:paddingLeft="@dimen/margin_m"
            android:paddingTop="@dimen/margin_s"
            android:paddingRight="@dimen/margin_m"
            android:paddingBottom="@dimen/margin_s"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_s"
            android:text="@string/edit_profile"
            android:lines="1"
            android:textAllCaps="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <ScrollView
        android:id="@+id/sv_user_fragment"
        android:background="@drawable/shape_bg_user_fragment"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_m"
        android:layout_marginTop="@dimen/margin_l"
        android:layout_marginRight="@dimen/margin_m"
        android:layout_marginBottom="60dp"
        android:layout_below="@+id/rl_user_info_user_fragment"
        android:nestedScrollingEnabled="false"
        android:elevation="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <GridLayout
                android:id="@+id/gl_user_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_m"
                android:layout_marginTop="@dimen/margin_l"
                android:layout_marginRight="@dimen/margin_m"
                android:rowCount="2"
                android:columnCount="3">
                <include
                    android:id="@+id/myapps_user_fragment"
                    android:layout_width="@dimen/user_fragment_card_size"
                    android:layout_height="@dimen/user_fragment_card_size"
                    android:layout_margin="@dimen/margin_s"
                    android:layout_columnWeight="1"
                    layout="@layout/user_fragment_card"/>
                <include
                    android:id="@+id/updates_user_fragment"
                    android:layout_width="@dimen/user_fragment_card_size"
                    android:layout_height="@dimen/user_fragment_card_size"
                    android:layout_margin="@dimen/margin_s"
                    android:layout_columnWeight="1"
                    layout="@layout/user_fragment_card"/>
                <include
                    android:id="@+id/downloads_user_fragment"
                    android:layout_width="@dimen/user_fragment_card_size"
                    android:layout_height="@dimen/user_fragment_card_size"
                    android:layout_margin="@dimen/margin_s"
                    android:layout_columnWeight="1"
                    layout="@layout/user_fragment_card"/>
                <include
                    android:id="@+id/rollback_user_fragment"
                    android:layout_width="@dimen/user_fragment_card_size"
                    android:layout_height="@dimen/user_fragment_card_size"
                    android:layout_margin="@dimen/margin_s"
                    android:layout_columnWeight="1"
                    layout="@layout/user_fragment_card"/>
                <include
                    android:id="@+id/wishlist_user_fragment"
                    android:layout_width="@dimen/user_fragment_card_size"
                    android:layout_height="@dimen/user_fragment_card_size"
                    android:layout_margin="@dimen/margin_s"
                    android:layout_columnWeight="1"
                    layout="@layout/user_fragment_card"/>
                <include
                    android:id="@+id/upcoming_releases_user_fragment"
                    android:layout_width="@dimen/user_fragment_card_size"
                    android:layout_height="@dimen/user_fragment_card_size"
                    android:layout_margin="@dimen/margin_s"
                    android:layout_columnWeight="1"
                    layout="@layout/user_fragment_card"/>
            </GridLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/ll_user_fragment"
                android:background="@drawable/shape_bg_other_option_user_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_l"
                android:layout_marginTop="@dimen/margin_l"
                android:layout_marginRight="@dimen/margin_l"
                android:layout_below="@+id/gl_user_fragment">
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/ll_manage_subscription_user_fragment"
                    android:background="@drawable/selector_uf_other_option"
                    android:paddingTop="@dimen/margin_s"
                    android:paddingBottom="@dimen/margin_s"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="@dimen/icon_size_s"
                        android:layout_height="@dimen/icon_size_s"
                        android:layout_marginTop="@dimen/margin_m"
                        android:layout_marginBottom="@dimen/margin_m"
                        android:contentDescription="@null"
                        android:layout_marginStart="@dimen/margin_m"
                        android:layout_marginEnd="@dimen/margin_l"
                        app:srcCompat="@drawable/vector_uptodown_turbo"/>
                    <TextView
                        android:textSize="@dimen/text_size_m"
                        android:textColor="@color/text_primary"
                        android:ellipsize="end"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_manage_subscription_user_fragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/turbo_welcome_popup_manage_subscription"
                        android:maxLines="1"
                        android:layout_marginEnd="@dimen/margin_l"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/ll_security_user_fragment"
                    android:background="@drawable/selector_uf_other_option"
                    android:paddingTop="@dimen/margin_s"
                    android:paddingBottom="@dimen/margin_s"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="@dimen/icon_size_s"
                        android:layout_height="@dimen/icon_size_s"
                        android:layout_marginTop="@dimen/margin_m"
                        android:layout_marginBottom="@dimen/margin_m"
                        android:contentDescription="@null"
                        android:layout_marginStart="@dimen/margin_m"
                        android:layout_marginEnd="@dimen/margin_l"
                        app:srcCompat="@drawable/vector_user_panel_security"/>
                    <TextView
                        android:textSize="@dimen/text_size_m"
                        android:textColor="@color/text_primary"
                        android:ellipsize="end"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_security_user_fragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/menu_left_security_label"
                        android:maxLines="1"
                        android:layout_marginEnd="@dimen/margin_l"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/ll_notifications_user_fragment"
                    android:background="@drawable/selector_uf_other_option"
                    android:paddingTop="@dimen/margin_s"
                    android:paddingBottom="@dimen/margin_s"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="@dimen/margin_m"
                        android:layout_marginBottom="@dimen/margin_m"
                        android:contentDescription="@null"
                        android:layout_marginStart="@dimen/margin_m"
                        android:layout_marginEnd="@dimen/margin_l"
                        app:srcCompat="@drawable/vector_user_panel_notifications"/>
                    <TextView
                        android:textSize="@dimen/text_size_m"
                        android:textColor="@color/text_primary"
                        android:ellipsize="end"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_notifications_user_fragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/title_notification_log"
                        android:maxLines="1"
                        android:layout_marginEnd="@dimen/margin_l"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/ll_settings_user_fragment"
                    android:background="@drawable/selector_uf_other_option"
                    android:paddingTop="@dimen/margin_s"
                    android:paddingBottom="@dimen/margin_s"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="@dimen/icon_size_s"
                        android:layout_height="@dimen/icon_size_s"
                        android:layout_marginTop="@dimen/margin_m"
                        android:layout_marginBottom="@dimen/margin_m"
                        android:contentDescription="@null"
                        android:layout_marginStart="@dimen/margin_m"
                        android:layout_marginEnd="@dimen/margin_l"
                        app:srcCompat="@drawable/vector_user_panel_settings"/>
                    <TextView
                        android:textSize="@dimen/text_size_m"
                        android:textColor="@color/text_primary"
                        android:ellipsize="end"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_settings_user_fragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/settings"
                        android:maxLines="1"
                        android:layout_marginEnd="@dimen/margin_l"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/ll_support_user_fragment"
                    android:background="@drawable/selector_uf_other_option"
                    android:paddingTop="@dimen/margin_s"
                    android:paddingBottom="@dimen/margin_s"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_support_user_fragment"
                        android:layout_width="@dimen/icon_size_s"
                        android:layout_height="@dimen/icon_size_s"
                        android:layout_marginTop="@dimen/margin_m"
                        android:layout_marginBottom="@dimen/margin_m"
                        android:contentDescription="@null"
                        android:layout_marginStart="@dimen/margin_m"
                        android:layout_marginEnd="@dimen/margin_l"
                        app:srcCompat="@drawable/vector_support"/>
                    <TextView
                        android:textSize="@dimen/text_size_m"
                        android:textColor="@color/text_primary"
                        android:ellipsize="end"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_support_user_fragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/support_title"
                        android:maxLines="1"
                        android:layout_marginEnd="@dimen/margin_l"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_l"
                android:layout_marginBottom="@dimen/margin_l"
                android:layout_below="@+id/ll_user_fragment">
                <TextView
                    android:textSize="@dimen/margin_m"
                    android:textColor="@color/text_secundary"
                    android:id="@+id/tv_web_user_fragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/menu_left_web_label"/>
                <TextView
                    android:textSize="@dimen/margin_m"
                    android:textColor="@color/text_secundary"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/tv_log_out_user_fragment"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cerrar_sesion"
                    android:layout_marginStart="@dimen/margin_xl"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
