<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/background_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_wishlist"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">
        <TextView
            android:id="@+id/tv_title_wishlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wishlist_title"
            style="@style/UptodownToolbarStyle"/>
    </androidx.appcompat.widget.Toolbar>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_wishlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_m"
        android:layout_below="@+id/toolbar_wishlist"/>
    <TextView
        android:textSize="@dimen/text_size_l"
        android:textColor="@color/text_secundary"
        android:gravity="center"
        android:id="@+id/tv_no_items_wishlist"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_m"
        android:text="@string/msg_no_upcoming_releases"
        android:layout_centerInParent="true"/>
    <TextView
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/tv_explore_wishlist"
        android:background="@drawable/ripple_blue_primary_button"
        android:padding="@dimen/margin_m"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wishlist_explore"
        android:maxLines="1"
        android:layout_below="@+id/tv_no_items_wishlist"
        android:layout_centerHorizontal="true"
        android:textAllCaps="true"/>
    <include
        android:id="@+id/loading_view_wishlist"
        android:visibility="visible"
        layout="@layout/loading_view"/>
</RelativeLayout>
