<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <include
        android:id="@+id/toolbar_container"
        app:layout_constraintBottom_toTopOf="@+id/sc_detail_container"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/toolbar_main"/>
    <ScrollView
        android:id="@+id/sc_detail_container"
        android:paddingLeft="@dimen/spacing_large"
        android:paddingTop="@dimen/spacing_large"
        android:paddingRight="@dimen/spacing_large"
        android:paddingBottom="@dimen/spacing_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_container">
        <LinearLayout
            android:orientation="vertical"
            android:paddingBottom="@dimen/spacing_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/medium_text_size"
                android:textColor="@color/colorBlueAccent"
                android:id="@+id/tv_privacy_policy_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_large"
                android:text="@string/privacy_policy"/>
            <TextView
                android:textSize="@dimen/medium_text_size"
                android:id="@+id/tv_description"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"/>
            <TextView
                android:textSize="@dimen/medium_text_size"
                android:id="@+id/tv_cookie_max_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cookie_max_age"/>
            <TextView
                android:textSize="@dimen/medium_text_size"
                android:id="@+id/tv_uses_non_cookie_access"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/uses_non_cookie_access"/>
            <TextView
                android:textSize="@dimen/medium_text_size"
                android:id="@+id/tv_data_retention"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_large"
                android:text="@string/data_retention"/>
            <TextView
                android:textSize="@dimen/medium_text_size"
                android:textColor="@color/colorBlueAccent"
                android:id="@+id/tv_disclosures"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_large"
                android:text="@string/disclosures"/>
            <TextView
                android:textSize="@dimen/medium_text_size"
                android:textStyle="bold"
                android:id="@+id/tv_purposes_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/purposes"
                android:textAllCaps="true"/>
            <TextView
                android:textSize="@dimen/medium_text_size"
                android:id="@+id/tv_purposes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="@dimen/medium_text_size"
                android:textStyle="bold"
                android:id="@+id/tv_legitimate_interests_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/legitimate_interests"
                android:textAllCaps="true"/>
            <TextView
                android:textSize="@dimen/medium_text_size"
                android:id="@+id/tv_legitimate_interests"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="@dimen/medium_text_size"
                android:textStyle="bold"
                android:id="@+id/tv_special_purposes_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/special_purposes"
                android:textAllCaps="true"/>
            <TextView
                android:textSize="@dimen/medium_text_size"
                android:id="@+id/tv_special_purposes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="@dimen/medium_text_size"
                android:textStyle="bold"
                android:id="@+id/tv_features_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/flexible_purposes"
                android:textAllCaps="true"/>
            <TextView
                android:textSize="@dimen/medium_text_size"
                android:id="@+id/tv_features"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="@dimen/medium_text_size"
                android:textStyle="bold"
                android:id="@+id/tv_special_features_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/flexible_purposes"
                android:textAllCaps="true"/>
            <TextView
                android:textSize="@dimen/medium_text_size"
                android:id="@+id/tv_special_features"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="@dimen/medium_text_size"
                android:textStyle="bold"
                android:id="@+id/tv_data_declarations_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/data_declarations"
                android:textAllCaps="true"/>
            <TextView
                android:textSize="@dimen/medium_text_size"
                android:id="@+id/tv_data_declarations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
