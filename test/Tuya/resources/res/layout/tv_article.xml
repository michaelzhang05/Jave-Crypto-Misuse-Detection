<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="140dp"
    android:layout_height="wrap_content">
    <com.uptodown.tv.utils.FullWidthImageViewTv
        android:id="@+id/iv_image_article"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="@dimen/text_size_m"
        android:textColor="@color/main_light_grey"
        android:ellipsize="end"
        android:id="@+id/tv_desc_article"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:maxLines="2"
        android:lines="2"
        android:layout_below="@+id/iv_image_article"/>
    <TextView
        android:textSize="@dimen/text_size_m"
        android:textColor="@color/accent_green"
        android:ellipsize="end"
        android:id="@+id/tv_date_article"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:maxLines="1"
        android:lines="1"
        android:layout_below="@+id/tv_desc_article"
        android:layout_marginStart="10dp"/>
    <ImageView
        android:id="@+id/iv_logo_author_article"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tv_desc_article"
        android:contentDescription="@null"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/tv_desc_article"/>
</RelativeLayout>
