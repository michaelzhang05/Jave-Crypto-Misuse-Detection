<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@color/main_light_grey"
    android:showDividers="middle">
    <TextView
        android:textSize="@dimen/text_size_l"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/tv_positive_title"
        android:background="@drawable/bg_dialog_title"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_open_app_details_positive"
        android:text="@string/app_catalog_details"
        app:drawableStartCompat="@drawable/vector_myappsupdates_dialog_app_details"
        style="@style/AppSelectedDialogTextView"/>
    <TextView
        android:id="@+id/tv_uninstall_positive"
        android:text="@string/dialogo_app_selected_uninstall"
        app:drawableStartCompat="@drawable/vector_myappsupdates_dialog_uninstall"
        style="@style/AppSelectedDialogTextView"/>
    <TextView
        android:id="@+id/tv_virus_report_positive"
        android:text="@string/virustotal_safety_report_title"
        app:drawableStartCompat="@drawable/vector_myappsupdates_dialog_vt_report"
        style="@style/AppSelectedDialogTextView"/>
    <TextView
        android:id="@+id/tv_rollback_positive"
        android:text="@string/rollback_title"
        app:drawableStartCompat="@drawable/vector_myappsupdates_dialog_rollback"
        style="@style/AppSelectedDialogTextView"/>
</LinearLayout>
