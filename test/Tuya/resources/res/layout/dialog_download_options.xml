<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog"
    android:paddingBottom="@dimen/margin_m"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@color/main_light_grey"
    android:showDividers="middle"
    android:dividerPadding="@dimen/margin_l">
    <TextView
        android:textSize="@dimen/text_size_l"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/tv_title_ddo"
        android:background="@drawable/bg_dialog_title"
        android:padding="@dimen/margin_l"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_open_ddo"
        android:text="@string/option_button_install"
        app:drawableStartCompat="@drawable/vector_myappsupdates_dialog_open"
        style="@style/AppSelectedDialogTextView"/>
    <TextView
        android:id="@+id/tv_select_ddo"
        android:text="@string/select_item"
        app:drawableStartCompat="@drawable/vector_myappsupdates_dialog_version_details"
        style="@style/AppSelectedDialogTextView"/>
    <TextView
        android:id="@+id/tv_app_details_ddo"
        android:text="@string/app_catalog_details"
        app:drawableStartCompat="@drawable/vector_myappsupdates_dialog_app_details"
        style="@style/AppSelectedDialogTextView"/>
    <TextView
        android:id="@+id/tv_share_ddo"
        android:text="@string/option_button_share"
        app:drawableStartCompat="@drawable/vector_myappsupdates_dialog_share"
        style="@style/AppSelectedDialogTextView"/>
    <TextView
        android:id="@+id/tv_delete_ddo"
        android:text="@string/option_button_delete"
        app:drawableStartCompat="@drawable/vector_myappsupdates_dialog_uninstall"
        style="@style/AppSelectedDialogTextView"/>
    <TextView
        android:id="@+id/tv_open_containing_folder_ddo"
        android:text="@string/option_open_containing_folder"
        app:drawableStartCompat="@drawable/vector_myappsupdates_dialog_check_update"
        style="@style/AppSelectedDialogTextView"/>
</LinearLayout>
