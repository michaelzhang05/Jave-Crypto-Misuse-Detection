<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_icono_downloading"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        app:srcCompat="@drawable/core_vector_apk"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/iv_icono_downloading">
        <TextView
            android:textSize="@dimen/text_size_xl"
            android:textColor="@color/main_dark_grey"
            android:ellipsize="end"
            android:id="@+id/tv_nombre_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_marginEnd="5dp"/>
        <TextView
            android:textSize="@dimen/text_size_m"
            android:textColor="@color/main_dark_grey"
            android:ellipsize="end"
            android:id="@+id/tv_size_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_below="@+id/tv_nombre_app"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/tv_date_download"/>
        <TextView
            android:textSize="@dimen/text_size_m"
            android:textColor="@color/main_dark_grey"
            android:ellipsize="end"
            android:id="@+id/tv_date_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_below="@+id/tv_nombre_app"
            android:layout_marginEnd="5dp"/>
        <ProgressBar
            android:id="@+id/progressbar_downloading"
            android:layout_below="@+id/tv_size_download"
            style="@style/ProgressBarDownloading"/>
    </RelativeLayout>
</RelativeLayout>
