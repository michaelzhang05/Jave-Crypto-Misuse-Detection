<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:showDividers="middle">
    <RelativeLayout
        android:gravity="center_vertical"
        android:id="@+id/rl_status_loading"
        android:background="@drawable/shape_stroke_blue_primary"
        android:visibility="visible"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/margin_l"
        android:layout_marginBottom="@dimen/margin_m"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/margin_m"
        android:elevation="6dp">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_m"
            android:layout_marginBottom="@dimen/margin_m"
            android:layout_centerInParent="true"
            style="@style/ProgressBarLoadingContent"/>
    </RelativeLayout>
    <TextView
        android:textSize="@dimen/text_size_l"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/tv_status_download"
        android:background="@drawable/ripple_blue_primary_button"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/margin_l"
        android:layout_marginBottom="@dimen/margin_m"
        android:text="@string/updates_button_download_app"
        android:layout_weight="0.45"
        android:textAllCaps="true"
        android:layout_marginStart="@dimen/margin_m"
        android:elevation="6dp"
        style="@style/AutoSizeTextView"/>
    <TextView
        android:textSize="@dimen/text_size_l"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/tv_open_download_button"
        android:background="@drawable/ripple_blue_primary_button"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/margin_l"
        android:layout_marginBottom="@dimen/margin_m"
        android:text="@string/open"
        android:layout_weight="0.45"
        android:textAllCaps="true"
        android:layout_marginStart="@dimen/margin_m"
        android:elevation="6dp"
        style="@style/AutoSizeTextView"/>
    <ImageView
        android:id="@+id/iv_virustotal_button"
        android:background="@drawable/ripple_open_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/margin_l"
        android:layout_marginBottom="@dimen/margin_m"
        android:layout_marginStart="@dimen/margin_m"
        android:elevation="6dp"
        app:srcCompat="@drawable/vector_virus_total_report_app_detail"/>
    <ImageView
        android:id="@+id/iv_wishlist_button"
        android:padding="12dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/margin_m"
        android:layout_marginTop="@dimen/margin_l"
        android:layout_marginRight="@dimen/margin_m"
        android:layout_marginBottom="@dimen/margin_m"
        android:elevation="6dp"
        app:srcCompat="@drawable/vector_heart_red"/>
</LinearLayout>
