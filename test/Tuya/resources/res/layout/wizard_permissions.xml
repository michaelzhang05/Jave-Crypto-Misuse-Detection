<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/splash_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/rl_header_wp"
        layout="@layout/wizard_header"/>
    <ScrollView
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_option_buttons_wp"
        android:layout_below="@+id/rl_header_wp">
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/shape_bg_wizard"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="24sp"
                android:textColor="@color/text_terciary"
                android:id="@+id/tv_title_wp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/more_info_permissions"
                android:layout_marginEnd="20dp"/>
            <RelativeLayout
                android:id="@+id/rl_unknown_sources_wp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp">
                <com.uptodown.views.ScrollableTextView
                    android:textSize="@dimen/text_size_m"
                    android:textColor="@color/text_terciary"
                    android:id="@+id/tv_unknown_sources_title_wp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wizard_unknown_sources"
                    android:maxLines="1"
                    android:lines="1"/>
                <TextView
                    android:textSize="@dimen/text_size_xs"
                    android:textColor="@color/wizard_next_button_text"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:id="@+id/tv_unknown_sources_badge_wp"
                    android:background="@drawable/shape_bg_badge_wizard"
                    android:paddingLeft="6dp"
                    android:paddingTop="3dp"
                    android:paddingRight="6dp"
                    android:paddingBottom="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_s"
                    android:text="@string/wizard_recommended_badge"
                    android:maxLines="1"
                    android:lines="1"
                    android:layout_below="@+id/tv_unknown_sources_title_wp"
                    android:textAllCaps="true"/>
                <TextView
                    android:textSize="@dimen/text_size_m"
                    android:textColor="@color/text_primary"
                    android:id="@+id/tv_unknown_sources_msg_wp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_s"
                    android:text="@string/msg_install_from_unknown_source"
                    android:layout_below="@+id/tv_unknown_sources_badge_wp"
                    android:layout_marginEnd="@dimen/margin_m"
                    android:layout_toStartOf="@+id/sc_unknown_sources_wp"/>
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/sc_unknown_sources_wp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:thumb="@drawable/selector_slide_thumb_switch"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    app:track="@drawable/selector_slide_track_switch"/>
                <View
                    android:id="@+id/v_unknown_sources_separator"
                    android:background="@color/text_terciary"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/tv_unknown_sources_msg_wp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_notifications_wp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:textSize="@dimen/text_size_m"
                    android:textColor="@color/text_terciary"
                    android:ellipsize="end"
                    android:id="@+id/tv_notifications_title_wp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/recibir_notificaciones"
                    android:maxLines="1"
                    android:lines="1"
                    android:layout_toStartOf="@+id/sc_notifications_wp"/>
                <TextView
                    android:textSize="@dimen/text_size_m"
                    android:textColor="@color/text_primary"
                    android:id="@+id/tv_notifications_msg_wp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/recibir_notificaciones_desc"
                    android:layout_below="@+id/tv_notifications_title_wp"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@+id/sc_notifications_wp"/>
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/sc_notifications_wp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:thumb="@drawable/selector_slide_thumb_switch"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    app:track="@drawable/selector_slide_track_switch"/>
                <View
                    android:id="@+id/v_notifications_wp"
                    android:background="@color/text_terciary"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/tv_notifications_msg_wp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_autoupdate_wp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">
                <TextView
                    android:textSize="@dimen/text_size_m"
                    android:textColor="@color/text_terciary"
                    android:ellipsize="end"
                    android:id="@+id/tv_autoupdate_title_wp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/pref_auto_update_title"
                    android:maxLines="1"
                    android:lines="1"
                    android:layout_toStartOf="@+id/sc_autoupdate_wp"/>
                <TextView
                    android:textSize="@dimen/text_size_m"
                    android:textColor="@color/text_primary"
                    android:id="@+id/tv_autoupdate_msg_wp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:text="@string/explanation_update_apps_auto"
                    android:layout_below="@+id/tv_autoupdate_title_wp"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@+id/sc_autoupdate_wp"/>
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/sc_autoupdate_wp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:thumb="@drawable/selector_slide_thumb_switch"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    app:track="@drawable/selector_slide_track_switch"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/ll_option_buttons_wp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentBottom="true">
        <TextView
            android:textSize="@dimen/text_size_xl"
            android:textColor="@color/selector_wizard_back_button_text"
            android:gravity="center"
            android:id="@+id/tv_back_wp"
            android:background="@drawable/selector_wizard_back_button"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:paddingRight="30dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="@string/back"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:textSize="@dimen/text_size_xl"
            android:textColor="@color/selector_wizard_back_button_text"
            android:gravity="center"
            android:id="@+id/tv_next_wp"
            android:background="@drawable/selector_wizard_back_button"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:paddingRight="30dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="@string/answer_next"
            android:layout_weight="1"
            android:layout_marginStart="10dp"/>
    </LinearLayout>
</RelativeLayout>
