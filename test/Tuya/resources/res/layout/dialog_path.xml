<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:id="@+id/tv_title_dialog_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/output_path"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="12sp"
                android:textColor="@color/text_primary"
                android:id="@+id/tv_path_dialog_path"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/iv_browse_path"/>
            <TextView
                android:textSize="10sp"
                android:textColor="@color/text_secundary"
                android:id="@+id/tv_error_path"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-4dp"
                android:text="@string/core_msg_cannot_write_path"
                android:layout_below="@+id/tv_path_dialog_path"/>
            <ImageView
                android:id="@+id/iv_browse_path"
                android:background="@drawable/ripple_bg"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/core_browse_storage"
                android:layout_alignParentEnd="true"
                app:srcCompat="@drawable/core_vector_folder_edit"/>
        </RelativeLayout>
        <TextView
            android:textSize="14sp"
            android:textColor="@color/text_secundary"
            android:id="@+id/tv_name_format_dialog_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/backup_file_name_format"/>
        <RadioGroup
            android:id="@+id/rg_name_format"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:textSize="12sp"
                android:textColor="@color/third_grey"
                android:id="@+id/rb_option_appname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/dialog_path_app_name"
                android:buttonTint="@color/blue_primary"/>
            <RadioButton
                android:textSize="12sp"
                android:textColor="@color/third_grey"
                android:id="@+id/rb_option_packagename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dialog_path_packagename"
                android:buttonTint="@color/blue_primary"/>
        </RadioGroup>
        <TextView
            android:textSize="14sp"
            android:textColor="@color/text_secundary"
            android:id="@+id/tv_extension_dialog_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/backup_file_extension"/>
        <RadioGroup
            android:id="@+id/rg_extension"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:textSize="12sp"
                android:textColor="@color/third_grey"
                android:id="@+id/rb_xapk_extension"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:buttonTint="@color/blue_primary"/>
            <RadioButton
                android:textSize="12sp"
                android:textColor="@color/third_grey"
                android:id="@+id/rb_apks_extension"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/blue_primary"/>
        </RadioGroup>
        <CheckBox
            android:textSize="12sp"
            android:textColor="@color/third_grey"
            android:id="@+id/cb_versioncode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dialog_path_version_code"
            android:buttonTint="@color/blue_primary"/>
        <TextView
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:id="@+id/tv_result_title_dialog_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/dialog_path_example"/>
        <TextView
            android:textSize="12sp"
            android:textColor="@color/blue_primary"
            android:id="@+id/tv_result_dialog_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp">
            <TextView
                android:layout_gravity="center_horizontal"
                android:id="@+id/tv_cancel_dialog_path"
                android:text="@string/option_button_cancel"
                style="@style/DialogButtonsStyle"/>
            <TextView
                android:layout_gravity="center_horizontal"
                android:id="@+id/tv_ok_dialog_path"
                android:text="@string/ok"
                android:layout_marginStart="@dimen/margin_m"
                style="@style/DialogButtonsStyle"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
