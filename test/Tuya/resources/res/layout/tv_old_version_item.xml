<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_tv_old_version_item"
    android:focusable="true"
    android:layout_width="350dp"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_icono_version"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        app:srcCompat="@drawable/vector_uptodown_logo_bag_disabled"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/tv_action_old_version_item"
        android:layout_toEndOf="@+id/iv_icono_version">
        <TextView
            android:textSize="@dimen/text_size_xl"
            android:textColor="@color/main_dark_grey"
            android:ellipsize="end"
            android:id="@+id/tv_name_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_marginEnd="5dp"/>
        <TextView
            android:textSize="@dimen/text_size_m"
            android:textColor="@color/main_dark_grey"
            android:ellipsize="end"
            android:id="@+id/tv_size_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_below="@+id/tv_name_version"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/tv_version"/>
        <TextView
            android:textSize="@dimen/text_size_m"
            android:textColor="@color/main_dark_grey"
            android:ellipsize="end"
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_below="@+id/tv_name_version"
            android:layout_marginEnd="5dp"/>
        <ProgressBar
            android:id="@+id/progressbar_downloading_version"
            android:layout_below="@+id/tv_size_version"
            style="@style/ProgressBarDownloading"/>
    </RelativeLayout>
    <TextView
        android:textSize="@dimen/text_size_m"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/tv_action_old_version_item"
        android:background="@color/accent_green"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:text="@string/updates_button_download_app"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
