<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="@dimen/text_size_xl"
        android:textColor="@color/text_terciary"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/tv_install"
        android:background="@drawable/ripple_bg_card"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/option_button_install"
        android:maxLines="1"/>
    <View
        android:background="@color/main_light_grey"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:textSize="@dimen/text_size_xl"
        android:textColor="@color/text_terciary"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/tv_delete"
        android:background="@drawable/ripple_bg_card"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/option_button_delete"
        android:maxLines="1"/>
    <View
        android:background="@color/main_light_grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
