<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_header_wizard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp">
    <ImageView
        android:id="@+id/iv_logo_header_wizard"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@null"
        android:layout_marginStart="20dp"
        app:srcCompat="@drawable/vector_uptodown_logo_bag_transp"/>
    <TextView
        android:textSize="@dimen/text_size_l"
        android:textColor="@color/white"
        android:id="@+id/tv_title_header_wizard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/app_name"
        android:layout_toEndOf="@+id/iv_logo_header_wizard"/>
</RelativeLayout>
