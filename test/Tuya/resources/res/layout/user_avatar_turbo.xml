<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/icon_size_xl"
    android:layout_height="@dimen/icon_size_xl"
    android:layout_marginBottom="@dimen/margin_l">
    <ImageView
        android:id="@+id/iv_avatar_item"
        android:layout_width="@dimen/icon_size_xl"
        android:layout_height="@dimen/icon_size_xl"
        android:contentDescription="@null"/>
    <RelativeLayout
        android:id="@+id/rl_shadow_avatar_item"
        android:background="@drawable/shape_avatar_item"
        android:layout_width="@dimen/icon_size_xl"
        android:layout_height="@dimen/icon_size_xl"/>
    <ImageView
        android:id="@+id/iv_locked_item"
        android:visibility="gone"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:contentDescription="@null"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/vector_lock"/>
</RelativeLayout>
