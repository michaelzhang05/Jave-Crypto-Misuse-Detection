<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_installed_app_item"
    android:background="@drawable/ripple_bg_card"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_icon_installed_app_item"
        android:layout_width="@dimen/icon_size_l"
        android:layout_height="@dimen/icon_size_l"
        android:adjustViewBounds="true"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:layout_marginEnd="10dp"
        app:srcCompat="@drawable/vector_uptodown_logo_bag_disabled"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_toEndOf="@+id/iv_icon_installed_app_item">
        <TextView
            android:textSize="@dimen/font_size_16"
            android:textColor="@color/text_primary"
            android:ellipsize="end"
            android:id="@+id/tv_name_installed_app_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_s">
            <TextView
                android:textSize="@dimen/text_size_m"
                android:textColor="@color/text_quaternary"
                android:ellipsize="end"
                android:id="@+id/tv_version_installed_app_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:lines="1"
                android:layout_marginEnd="@dimen/margin_s"/>
            <TextView
                android:textColor="@color/text_terciary"
                android:id="@+id/tv_excluded_installed_app_item"
                android:background="@drawable/shape_stroke_blue_primary"
                android:layout_marginTop="0dp"
                style="@style/TextViewAppInfoStatus"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
