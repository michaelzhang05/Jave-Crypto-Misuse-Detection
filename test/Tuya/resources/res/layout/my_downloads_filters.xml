<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_my_downloads_sort"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_m">
        <TextView
            android:textSize="@dimen/text_size_m"
            android:textColor="@color/main_light_grey"
            android:id="@+id/tv_label_order_by_mdf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_by_label"/>
        <RadioGroup
            android:orientation="horizontal"
            android:id="@+id/rg_sort_downloads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_m"
            android:layout_below="@+id/tv_label_order_by_mdf">
            <RadioButton
                android:id="@+id/rb_date_mdf"
                android:background="@drawable/core_vector_sort_date_desc_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:button="@null"
                android:contentDescription="@string/cd_order_by_date_desc"/>
            <RadioButton
                android:id="@+id/rb_size_mdf"
                android:background="@drawable/core_vector_sort_size_asc_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:contentDescription="@string/cd_order_by_size_desc"
                android:layout_marginStart="@dimen/margin_m"/>
            <RadioButton
                android:id="@+id/rb_name_mdf"
                android:background="@drawable/core_vector_sort_az_asc_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:contentDescription="@string/cd_order_by_name_desc"
                android:layout_marginStart="@dimen/margin_m"/>
        </RadioGroup>
        <TextView
            android:textSize="@dimen/text_size_s"
            android:textColor="@color/white"
            android:id="@+id/tv_selector_downloads"
            android:background="@drawable/ripple_blue_primary_button"
            android:padding="@dimen/margin_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_item"
            android:layout_alignBottom="@+id/rg_sort_downloads"
            android:textAllCaps="true"
            android:layout_marginStart="@dimen/margin_m"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_my_downloads_selector"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_s"
        android:layout_alignBottom="@+id/rl_my_downloads_sort">
        <TextView
            android:textSize="@dimen/text_size_m"
            android:textColor="@color/main_light_grey"
            android:gravity="end"
            android:id="@+id/tv_label_selected_items"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/core_x_items_selected"/>
        <TextView
            android:textSize="@dimen/text_size_s"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/tv_delete_selected_downloads"
            android:background="@drawable/ripple_blue_primary_button"
            android:padding="@dimen/margin_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete_selection"
            android:textAllCaps="true"
            android:layout_toStartOf="@+id/tv_delete_all_downloads"/>
        <TextView
            android:textSize="@dimen/text_size_s"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/tv_delete_all_downloads"
            android:background="@drawable/ripple_blue_primary_button"
            android:padding="@dimen/margin_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_delete_all"
            android:textAllCaps="true"
            android:layout_marginStart="@dimen/margin_m"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</RelativeLayout>
