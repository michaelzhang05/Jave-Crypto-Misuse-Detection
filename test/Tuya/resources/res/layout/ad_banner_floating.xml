<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_container_iv_banner"
        android:background="@drawable/shadow_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.uptodown.views.FullWidthImageView
            android:id="@+id/iv_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_close_banner"
        android:padding="@dimen/margin_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:layout_marginEnd="-10dp"
        android:layout_alignParentEnd="true">
        <ImageView
            android:background="@drawable/shape_circle_white"
            android:padding="@dimen/margin_s"
            android:layout_width="@dimen/icon_size_s"
            android:layout_height="@dimen/icon_size_s"
            android:contentDescription="@null"
            app:srcCompat="@drawable/core_vector_cross"/>
    </RelativeLayout>
    <TextView
        android:textSize="@dimen/text_size_s"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/tv_download_banner"
        android:background="@drawable/ripple_blue_primary_button"
        android:padding="@dimen/margin_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_m"
        android:maxWidth="100dp"
        android:text="@string/updates_button_download_app"
        android:layout_alignBottom="@+id/rl_container_iv_banner"
        android:textAllCaps="true"
        android:layout_marginEnd="@dimen/margin_m"
        android:layout_alignEnd="@+id/rl_container_iv_banner"/>
</RelativeLayout>
