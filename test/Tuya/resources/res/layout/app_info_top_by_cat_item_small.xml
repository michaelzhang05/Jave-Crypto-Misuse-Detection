<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_app_info_top_by_cat_small_item"
    android:background="@drawable/ripple_bg_card"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_logo_app_info_top_by_cat_small_item"
        android:layout_width="@dimen/icon_size_m"
        android:layout_height="@dimen/icon_size_m"
        android:layout_margin="@dimen/margin_m"
        android:layout_centerVertical="true">
        <ProgressBar
            android:id="@+id/pb_progress_app_info_top_by_cat_small_item"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:max="100"
            android:progress="0"
            android:indeterminateDrawable="@drawable/progressbar_circular_indeterminate"
            android:progressDrawable="@drawable/progressbar_circular"
            style="?android:attr/progressBarStyleHorizontal"/>
        <ImageView
            android:id="@+id/iv_logo_app_info_top_by_cat_small_item"
            android:layout_width="@dimen/icon_size_m"
            android:layout_height="@dimen/icon_size_m"
            android:contentDescription="@null"
            app:srcCompat="@drawable/vector_uptodown_logo_bag_disabled"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="@dimen/margin_m"
        android:layout_toEndOf="@+id/rl_logo_app_info_top_by_cat_small_item">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/text_size_l"
                android:textColor="@color/main_blue"
                android:id="@+id/tv_number_app_info_top_by_cat_small_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:layout_marginEnd="@dimen/margin_s"/>
            <TextView
                android:textSize="@dimen/text_size_l"
                android:textColor="@color/text_primary"
                android:ellipsize="end"
                android:id="@+id/tv_name_app_info_top_by_cat_small_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:lines="1"
                android:drawablePadding="6dp"/>
        </LinearLayout>
        <TextView
            android:textSize="@dimen/text_size_m"
            android:textColor="@color/text_secundary"
            android:ellipsize="end"
            android:id="@+id/tv_desc_app_info_top_by_cat_small_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:lines="1"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_progress_app_info_top_by_cat_small_item"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp">
            <TextView
                android:id="@+id/tv_progress_app_info_top_by_cat_small_item"
                android:layout_width="match_parent"
                style="@style/CardNameTextView"/>
            <TextView
                android:id="@+id/tv_verified_app_info_top_by_cat_small_item"
                android:layout_width="match_parent"
                android:layout_marginTop="1dp"
                android:text="@string/verified_by_uptodown"
                android:maxLines="1"
                android:drawablePadding="2dp"
                app:drawableStartCompat="@drawable/vector_myappsupdates_dialog_vt_report"
                style="@style/CardNameTextView"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_status_app_info_top_by_cat_small_item"
            android:visibility="gone"
            style="@style/TextViewAppInfoStatus"/>
    </LinearLayout>
</RelativeLayout>
