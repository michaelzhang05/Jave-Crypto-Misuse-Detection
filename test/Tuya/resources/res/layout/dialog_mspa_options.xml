<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mspa_options_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/toolbar_container"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/toolbar_main"/>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/sv_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_save_and_exit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_container">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/small_text_size"
                android:id="@+id/tv_purposes_label1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_large"
                android:layout_marginBottom="@dimen/spacing_small"
                android:text="@string/purposes"
                android:textAllCaps="true"
                android:layout_marginStart="@dimen/spacing_medium"/>
            <View
                android:id="@+id/purposes_divider"
                android:background="@color/colorGrey"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_purposes_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
            <TextView
                android:textSize="@dimen/small_text_size"
                android:id="@+id/tv_sensitive_purposes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_large"
                android:layout_marginBottom="@dimen/spacing_small"
                android:text="@string/sensitive_purposes"
                android:textAllCaps="true"
                android:layout_marginStart="@dimen/spacing_medium"/>
            <View
                android:id="@+id/sensitive_purposes_divider"
                android:background="@color/colorGrey"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_sensitive_purposes_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
            <TextView
                android:textSize="@dimen/small_text_size"
                android:id="@+id/tv_child_sensitive_purposes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_large"
                android:layout_marginBottom="@dimen/spacing_small"
                android:text="@string/child_sensitive_purposes"
                android:textAllCaps="true"
                android:layout_marginStart="@dimen/spacing_medium"/>
            <View
                android:id="@+id/child_sensitive_purposes_divider"
                android:background="@color/colorGrey"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_child_sensitive_purposes_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
            <FrameLayout
                android:id="@+id/gbc_fragment_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <Button
        android:id="@+id/btn_agree_to_all"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/spacing_small"
        android:layout_marginRight="@dimen/spacing_small"
        android:text="@string/agree_to_all"
        app:layout_constraintBottom_toBottomOf="@+id/btn_save_and_exit"
        app:layout_constraintEnd_toStartOf="@+id/btn_save_and_exit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_save_and_exit"
        style="@style/BlueGrayButtonStyle"/>
    <Button
        android:id="@+id/btn_save_and_exit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_marginBottom="@dimen/spacing_small"
        android:text="@string/save_and_exit"
        android:layout_marginEnd="@dimen/spacing_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_agree_to_all"
        style="@style/BlueGrayButtonStyle"/>
</androidx.constraintlayout.widget.ConstraintLayout>
