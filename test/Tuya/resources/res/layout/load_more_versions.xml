<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_old_versions_footer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_back_versions"
        android:background="@drawable/ripple_blue_primary_button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="10dp">
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerInParent="true"
            android:contentDescription="@null"
            app:srcCompat="@drawable/vector_arrow_left"
            app:tint="@color/white"/>
    </RelativeLayout>
    <TextView
        android:textSize="@dimen/text_size_m"
        android:textColor="@color/main_blue"
        android:id="@+id/tv_current_page_versions"
        android:background="@drawable/shape_stroke_blue_primary"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="1"
        android:layout_centerHorizontal="true"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"/>
    <RelativeLayout
        android:id="@+id/rl_forward_versions"
        android:background="@drawable/ripple_blue_primary_button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="10dp"
        android:layout_alignParentEnd="true">
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerInParent="true"
            android:contentDescription="@null"
            app:srcCompat="@drawable/vector_arrow_right"
            app:tint="@color/white"/>
    </RelativeLayout>
</RelativeLayout>
