<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_card_top_download"
    android:background="@drawable/ripple_bg_card"
    android:focusable="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="135sp"
        android:textColor="@color/main_blue"
        android:id="@+id/tv_number_card_top_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-40dp"
        android:maxLines="1"
        android:includeFontPadding="false"
        android:layout_marginStart="@dimen/margin_m"/>
    <RelativeLayout
        android:id="@+id/rl_card_details_top_download"
        android:layout_width="@dimen/icon_size_xl"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/top_download_horizontal_card_margin">
        <RelativeLayout
            android:id="@+id/rl_logo_card_top_download"
            android:layout_width="@dimen/icon_size_xl"
            android:layout_height="@dimen/icon_size_xl"
            android:layout_marginBottom="@dimen/margin_m">
            <ProgressBar
                android:id="@+id/pb_progress_card_top_download"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:max="100"
                android:progress="0"
                android:indeterminateDrawable="@drawable/progressbar_circular_indeterminate"
                android:progressDrawable="@drawable/progressbar_circular"
                style="?android:attr/progressBarStyleHorizontal"/>
            <ImageView
                android:id="@+id/iv_logo_card_top_download"
                android:layout_width="@dimen/icon_size_xl"
                android:layout_height="@dimen/icon_size_xl"
                android:contentDescription="@null"/>
        </RelativeLayout>
        <TextView
            android:gravity="center_horizontal"
            android:id="@+id/tv_titulo_card_holder_top_download"
            android:layout_marginTop="@dimen/margin_s"
            android:layout_below="@+id/rl_logo_card_top_download"
            android:layout_alignStart="@+id/rl_logo_card_top_download"
            android:layout_alignEnd="@+id/rl_logo_card_top_download"
            style="@style/CardTextViewHolder"/>
        <TextView
            android:gravity="center_horizontal"
            android:id="@+id/tv_titulo_card_top_download"
            android:layout_marginTop="@dimen/margin_s"
            android:layout_below="@+id/rl_logo_card_top_download"
            android:layout_centerHorizontal="true"
            android:layout_alignStart="@+id/rl_logo_card_top_download"
            android:layout_alignEnd="@+id/rl_logo_card_top_download"
            style="@style/CardNameTextView"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_progress_card_top_download"
            android:visibility="gone"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_s"
            android:layout_below="@+id/tv_titulo_card_top_download">
            <TextView
                android:gravity="center_horizontal"
                android:id="@+id/tv_progress_card_top_download"
                android:layout_width="match_parent"
                style="@style/CardNameTextView"/>
            <TextView
                android:id="@+id/tv_verified_card_top_download"
                android:layout_width="match_parent"
                android:layout_marginTop="1dp"
                android:text="@string/verified_by_uptodown"
                android:maxLines="2"
                android:drawablePadding="@dimen/margin_s"
                app:drawableStartCompat="@drawable/vector_myappsupdates_dialog_vt_report"
                style="@style/CardNameTextView"/>
        </LinearLayout>
        <TextView
            android:gravity="center_horizontal"
            android:id="@+id/tv_resumen_card_holder_top_download"
            android:visibility="invisible"
            android:lines="3"
            android:layout_below="@+id/tv_titulo_card_holder_top_download"
            android:layout_alignStart="@+id/rl_logo_card_top_download"
            android:layout_alignEnd="@+id/rl_logo_card_top_download"
            style="@style/CardTextViewHolder"/>
        <TextView
            android:gravity="center_horizontal"
            android:id="@+id/tv_resumen_card_top_download"
            android:maxLines="3"
            android:layout_below="@+id/tv_titulo_card_top_download"
            android:layout_alignStart="@+id/rl_logo_card_top_download"
            android:layout_alignEnd="@+id/rl_logo_card_top_download"
            style="@style/CardDescriptionTextView"/>
        <TextView
            android:id="@+id/tv_status_card_top_download"
            android:layout_below="@+id/tv_titulo_card_holder_top_download"
            style="@style/TextViewAppInfoStatus"/>
        <View
            android:id="@+id/view_bottom_card"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_below="@+id/tv_status_card_top_download"/>
    </RelativeLayout>
</RelativeLayout>
