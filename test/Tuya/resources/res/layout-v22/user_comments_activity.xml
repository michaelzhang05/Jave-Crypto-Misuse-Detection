<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_user_comments"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">
        <TextView
            android:id="@+id/tv_toolbar_title_user_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/user_comments_title"
            style="@style/UptodownToolbarStyle"/>
    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:id="@+id/rl_info_user_comment"
        android:paddingLeft="10dp"
        android:paddingTop="6dp"
        android:paddingRight="10dp"
        android:paddingBottom="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_user_comments"
        android:paddingHorizontal="10dp"
        android:paddingVertical="6dp">
        <ImageView
            android:id="@+id/iv_avatar_user_comment"
            android:layout_width="@dimen/user_avatar_review_turbo"
            android:layout_height="@dimen/user_avatar_review_turbo"
            android:contentDescription="@null"
            android:layout_marginEnd="@dimen/margin_m"/>
        <com.uptodown.util.views.UsernameTextView
            android:textSize="@dimen/text_size_l"
            android:textColor="@color/text_terciary"
            android:ellipsize="end"
            android:id="@+id/tv_username_user_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_s"
            android:maxLines="1"
            android:lines="1"
            android:layout_marginEnd="@dimen/margin_s"
            android:layout_toEndOf="@+id/iv_avatar_user_comment"/>
        <ImageView
            android:id="@+id/iv_turbo_mark_user_comment"
            android:visibility="invisible"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignTop="@+id/tv_username_user_comment"
            android:layout_alignBottom="@+id/tv_username_user_comment"
            android:contentDescription="@null"
            android:layout_marginEnd="@dimen/margin_s"
            android:layout_toEndOf="@+id/tv_username_user_comment"
            app:srcCompat="@drawable/vector_turbo"/>
        <TextView
            android:textSize="@dimen/text_size_m"
            android:textColor="@color/text_secundary"
            android:ellipsize="end"
            android:id="@+id/tv_date_user_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_s"
            android:maxLines="1"
            android:lines="1"
            android:layout_below="@+id/tv_username_user_comment"
            android:layout_toEndOf="@+id/iv_avatar_user_comment"/>
        <View
            android:id="@+id/v_separator_user_comments"
            android:background="@drawable/shape_dialog_options_divider"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_m"
            android:layout_below="@+id/iv_avatar_user_comment"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_user_comments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_info_user_comment"/>
    <TextView
        android:textSize="@dimen/text_size_l"
        android:gravity="center"
        android:id="@+id/tv_error_user_comments"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_m"
        android:layout_marginRight="@dimen/margin_m"
        android:text="@string/user_not_found"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="@dimen/margin_m"/>
    <include
        android:id="@+id/loading_view_user_comments"
        layout="@layout/loading_view"/>
</RelativeLayout>
