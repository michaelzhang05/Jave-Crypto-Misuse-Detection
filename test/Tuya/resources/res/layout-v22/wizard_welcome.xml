<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/splash_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/ll_header_wizard_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="20dp"
        android:layout_marginHorizontal="20dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@null"
            app:srcCompat="@drawable/vector_uptodown_logo_bag_transp"/>
        <TextView
            android:textSize="20dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/tv_welcome_to_wizard_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/wizard_welcome_welcome"/>
        <TextView
            android:textSize="30dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/tv_app_name_wizard_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"/>
        <TextView
            android:textSize="@dimen/text_size_xl"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/tv_slogan_to_wizard_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/wizard_welcome_slogan"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical"
        android:id="@+id/ll_options_wizard_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/tv_accept_wizard_welcome"
        android:layout_below="@+id/ll_header_wizard_welcome"
        android:layout_marginHorizontal="20dp">
        <RelativeLayout
            android:id="@+id/rl_terms_wizard_welcome"
            android:background="@drawable/ripple_wizard_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.uptodown.views.ScrollableTextView
                android:textSize="@dimen/text_size_m"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/tv_terms_wizard_welcome"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp"
                android:text="@string/tos_title"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="20dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_privacy_settings_wizard_welcome"
            android:background="@drawable/ripple_wizard_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <com.uptodown.views.ScrollableTextView
                android:textSize="@dimen/text_size_m"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/tv_privacy_settings_wizard_welcome"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp"
                android:text="@string/gdpr_title"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="20dp"/>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:textSize="@dimen/text_size_xl"
        android:textColor="@color/text_color_wizard_button"
        android:gravity="center"
        android:id="@+id/tv_accept_wizard_welcome"
        android:background="@drawable/selector_wizard_accept_button"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="20dp"
        android:text="@string/ok"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="20dp"
        android:paddingVertical="16dp"/>
    <FrameLayout
        android:id="@+id/loading_tmp"
        android:background="@color/main_light_grey"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_accept_wizard_welcome"
        android:layout_alignBottom="@+id/tv_accept_wizard_welcome"
        android:layout_toStartOf="@+id/tv_accept_wizard_welcome"
        android:layout_toEndOf="@+id/tv_accept_wizard_welcome"/>
</RelativeLayout>
