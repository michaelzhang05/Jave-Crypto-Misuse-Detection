<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog"
    android:padding="@dimen/margin_l"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true">
    <TextView
        android:textSize="@dimen/text_size_l"
        android:textColor="@color/text_primary"
        android:gravity="center"
        android:id="@+id/tv_dialog_title_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_m"
        android:text="@string/core_action_create"/>
    <TextView
        android:textSize="@dimen/text_size_m"
        android:textColor="@color/text_secundary"
        android:gravity="center"
        android:id="@+id/tv_dialog_file_name_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_l"
        android:text="@string/core_create_dialog_title"/>
    <EditText
        android:textSize="@dimen/text_size_m"
        android:textColor="@color/text_primary"
        android:textColorHint="@color/main_light_grey"
        android:id="@+id/et_dialog_file_name_create"
        android:background="@drawable/core_bg_search_view"
        android:padding="@dimen/margin_m"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_m"
        android:hint="@string/core_file_name_hint"
        android:inputType="text"
        android:textCursorDrawable="@null"
        android:layout_marginEnd="@dimen/margin_m"
        android:autofillHints="name"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_l"
        android:paddingVertical="8dp">
        <TextView
            android:layout_gravity="center_horizontal"
            android:id="@+id/tv_cancel_option_create"
            android:text="@string/option_button_cancel"
            style="@style/DialogButtonsStyle"/>
        <TextView
            android:layout_gravity="center_horizontal"
            android:id="@+id/tv_accept_option_create"
            android:text="@string/core_action_create"
            android:layout_marginStart="10dp"
            style="@style/DialogButtonsStyle"/>
    </LinearLayout>
</LinearLayout>
