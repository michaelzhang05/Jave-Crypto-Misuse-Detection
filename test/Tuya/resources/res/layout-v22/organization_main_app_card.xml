<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/ripple_bg_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_m">
    <TextView
        android:textSize="@dimen/text_size_l"
        android:textColor="@color/text_primary"
        android:ellipsize="end"
        android:id="@+id/tv_top_app_title_organization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_m"
        android:layout_marginRight="@dimen/margin_m"
        android:text="@string/organization_top_app_title"
        android:maxLines="1"
        android:lines="1"
        android:layout_marginHorizontal="@dimen/margin_m"/>
    <com.uptodown.views.FullWidthImageView
        android:id="@+id/iv_top_app_feature_organization"
        android:background="@drawable/shape_bg_placeholder"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginLeft="@dimen/margin_m"
        android:layout_marginTop="@dimen/margin_m"
        android:layout_marginRight="@dimen/margin_m"
        android:layout_below="@+id/tv_top_app_title_organization"
        android:contentDescription="@string/cd_featured_app"
        android:layout_marginHorizontal="@dimen/margin_m"/>
    <RelativeLayout
        android:id="@+id/rl_logo_organization"
        android:layout_width="@dimen/icon_size_m"
        android:layout_height="@dimen/icon_size_m"
        android:layout_marginLeft="@dimen/margin_m"
        android:layout_marginTop="@dimen/margin_m"
        android:layout_marginRight="@dimen/margin_m"
        android:layout_below="@+id/iv_top_app_feature_organization"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="@dimen/margin_m">
        <ProgressBar
            android:id="@+id/pb_progress_logo_organization"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:max="100"
            android:progress="0"
            android:indeterminateDrawable="@drawable/progressbar_circular_indeterminate"
            android:progressDrawable="@drawable/progressbar_circular"
            style="?android:attr/progressBarStyleHorizontal"/>
        <ImageView
            android:id="@+id/iv_top_app_logo_organization"
            android:layout_width="@dimen/icon_size_m"
            android:layout_height="@dimen/icon_size_m"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            app:srcCompat="@drawable/vector_uptodown_logo_bag_disabled"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_top_app_feature_organization"
        android:layout_alignTop="@+id/rl_logo_organization"
        android:layout_marginEnd="@dimen/margin_m"
        android:layout_toEndOf="@+id/rl_logo_organization">
        <TextView
            android:textSize="@dimen/text_size_m"
            android:textColor="@color/text_primary"
            android:ellipsize="end"
            android:id="@+id/tv_top_app_name_organization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:lines="1"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_progress_top_organization"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp">
            <TextView
                android:id="@+id/tv_progress_top_organization"
                android:layout_width="match_parent"
                style="@style/CardNameTextView"/>
            <TextView
                android:id="@+id/tv_verified_top_organization"
                android:layout_width="match_parent"
                android:layout_marginTop="1dp"
                android:text="@string/verified_by_uptodown"
                android:maxLines="1"
                android:drawablePadding="2dp"
                app:drawableStartCompat="@drawable/vector_myappsupdates_dialog_vt_report"
                style="@style/CardNameTextView"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ll_top_app_desc_organization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/text_size_m"
                android:textColor="@color/text_secundary"
                android:ellipsize="end"
                android:id="@+id/tv_top_app_desc_organization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:lines="2"/>
            <TextView
                android:id="@+id/tv_top_app_status_organization"
                android:visibility="visible"
                style="@style/TextViewAppInfoStatus"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_l"
        android:layout_below="@+id/rl_logo_organization"
        android:layout_toEndOf="@+id/rl_logo_organization">
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:contentDescription="@string/your_valoration"
                app:srcCompat="@drawable/vector_star_on"
                app:tint="@color/main_blue"/>
            <TextView
                android:textSize="@dimen/text_size_m"
                android:textColor="@color/details_text_color"
                android:id="@+id/tv_top_app_valoration_organization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_marginStart="@dimen/margin_s"
                android:layout_marginEnd="@dimen/margin_l"/>
            <View
                android:background="@color/main_light_grey"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <TextView
            android:textSize="@dimen/text_size_m"
            android:textColor="@color/details_text_color"
            android:ellipsize="end"
            android:id="@+id/tv_top_app_downloads_counter_organization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_l"
            android:layout_marginRight="@dimen/margin_l"
            android:maxLines="1"
            android:layout_marginHorizontal="@dimen/margin_l"/>
    </LinearLayout>
    <TextView
        android:textSize="@dimen/text_size_s"
        android:textColor="@color/white"
        android:id="@+id/tv_top_app_download_organization"
        android:background="@drawable/ripple_blue_primary_button"
        android:padding="@dimen/margin_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_m"
        android:text="@string/updates_button_download_app"
        android:layout_below="@+id/rl_logo_organization"
        android:textAllCaps="true"
        android:layout_marginEnd="@dimen/margin_m"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
