<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp">
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/bg_dialog"
            android:padding="@dimen/margin_l"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/text_size_l"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:id="@+id/tv_title_dialog_no_wifi_connection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dialogo_sin_wifi_titulo"/>
            <TextView
                android:textSize="@dimen/text_size_m"
                android:textColor="@color/text_secundary"
                android:gravity="center"
                android:id="@+id/tv_description_dialog_no_wifi_connection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_l"
                android:layout_marginBottom="@dimen/margin_l"
                android:text="@string/dialogo_sin_wifi_mensaje"
                android:layout_marginVertical="@dimen/margin_l"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_l">
                <TextView
                    android:id="@+id/tv_settings_dialog_no_wifi_connection"
                    android:background="@drawable/ripple_light_grey"
                    android:text="@string/settings"
                    android:layout_marginEnd="@dimen/margin_l"
                    style="@style/DialogButtonsStyle"/>
                <TextView
                    android:textColor="@color/blue_primary"
                    android:id="@+id/tv_cancel_dialog_no_wifi_connection"
                    android:background="@drawable/ripple_open_button"
                    android:layout_width="80dp"
                    android:text="@string/option_button_cancel"
                    android:layout_marginEnd="@dimen/margin_m"
                    android:layout_toStartOf="@+id/tv_ok_dialog_no_wifi_connection"
                    style="@style/DialogButtonsStyle"/>
                <TextView
                    android:id="@+id/tv_ok_dialog_no_wifi_connection"
                    android:layout_width="80dp"
                    android:text="@string/ok"
                    android:layout_alignParentEnd="true"
                    style="@style/DialogButtonsStyle"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_close_dialog_no_wifi_connection"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:contentDescription="@string/close"
        android:layout_alignParentEnd="true"
        android:elevation="5dp"
        app:srcCompat="@drawable/vector_cross_close_popup"/>
</RelativeLayout>
