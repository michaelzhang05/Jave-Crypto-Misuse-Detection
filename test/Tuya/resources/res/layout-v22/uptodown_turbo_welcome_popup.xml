<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="15dp"
    android:paddingTop="15dp"
    android:paddingRight="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="15dp">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsv_turbo_welcome_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_content_turbo"
            android:background="@drawable/shape_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/text_size_l"
                android:textColor="@color/turbo_landing_title"
                android:id="@+id/tv_title_turbo_welcome_popup"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_l"
                android:layout_marginTop="@dimen/margin_l"
                android:layout_marginRight="@dimen/margin_l"
                android:text="@string/turbo_welcome_popup_title"
                android:lineSpacingExtra="8dp"
                android:textAlignment="center"
                android:layout_marginHorizontal="@dimen/margin_l"/>
            <TextView
                android:textSize="@dimen/text_size_m"
                android:textColor="@color/turbo_text_secundary"
                android:id="@+id/tv_desc_turbo_welcome_popup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_l"
                android:layout_marginTop="@dimen/margin_m"
                android:layout_marginRight="@dimen/margin_l"
                android:text="@string/turbo_welcome_popup_description"
                android:textAlignment="center"
                android:layout_marginHorizontal="@dimen/margin_l"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_l"
                android:layout_marginTop="@dimen/margin_l"
                android:layout_marginRight="@dimen/margin_l"
                android:layout_marginHorizontal="@dimen/margin_l">
                <ImageView
                    android:id="@+id/iv_no_ads_turbo_welcome_popup"
                    android:layout_width="@dimen/icon_size_s"
                    android:layout_height="@dimen/icon_size_s"
                    android:contentDescription="@null"
                    app:srcCompat="@drawable/vector_turbo_ads"/>
                <TextView
                    android:textSize="@dimen/text_size_m"
                    android:textColor="@color/text_primary"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_no_ads_turbo_welcome_popup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_l"
                    android:layout_marginRight="@dimen/margin_l"
                    android:text="@string/turbo_no_ads"
                    android:layout_alignTop="@+id/iv_no_ads_turbo_welcome_popup"
                    android:layout_alignBottom="@+id/iv_no_ads_turbo_welcome_popup"
                    android:layout_toEndOf="@+id/iv_no_ads_turbo_welcome_popup"
                    android:layout_marginHorizontal="@dimen/margin_l"/>
                <TextView
                    android:textSize="@dimen/text_size_m"
                    android:textColor="@color/text_secundary"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_no_ads_desc_turbo_welcome_popup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_l"
                    android:layout_marginRight="@dimen/margin_l"
                    android:text="@string/turbo_welcome_popup_no_ads_description"
                    android:layout_below="@+id/iv_no_ads_turbo_welcome_popup"
                    android:layout_toEndOf="@+id/iv_no_ads_turbo_welcome_popup"
                    android:layout_marginHorizontal="@dimen/margin_l"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_l"
                android:layout_marginTop="@dimen/margin_l"
                android:layout_marginRight="@dimen/margin_l"
                android:layout_marginHorizontal="@dimen/margin_l">
                <ImageView
                    android:id="@+id/iv_customization_turbo_welcome_popup"
                    android:layout_width="@dimen/icon_size_s"
                    android:layout_height="@dimen/icon_size_s"
                    android:contentDescription="@null"
                    app:srcCompat="@drawable/vector_turbo_handshake"/>
                <TextView
                    android:textSize="@dimen/text_size_m"
                    android:textColor="@color/text_primary"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_customization_turbo_welcome_popup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_l"
                    android:layout_marginRight="@dimen/margin_l"
                    android:text="@string/turbo_exclusive_customization"
                    android:layout_alignTop="@+id/iv_customization_turbo_welcome_popup"
                    android:layout_alignBottom="@+id/iv_customization_turbo_welcome_popup"
                    android:layout_toEndOf="@+id/iv_customization_turbo_welcome_popup"
                    android:layout_marginHorizontal="@dimen/margin_l"/>
                <TextView
                    android:textSize="@dimen/text_size_m"
                    android:textColor="@color/text_secundary"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_customization_desc_turbo_welcome_popup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_l"
                    android:layout_marginRight="@dimen/margin_l"
                    android:text="@string/turbo_welcome_popup_customization_description"
                    android:layout_below="@+id/iv_customization_turbo_welcome_popup"
                    android:layout_toEndOf="@+id/iv_customization_turbo_welcome_popup"
                    android:layout_marginHorizontal="@dimen/margin_l"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_l"
                android:layout_marginTop="@dimen/margin_l"
                android:layout_marginRight="@dimen/margin_l"
                android:layout_marginHorizontal="@dimen/margin_l">
                <ImageView
                    android:id="@+id/iv_highlighted_comments_turbo_welcome_popup"
                    android:layout_width="@dimen/icon_size_s"
                    android:layout_height="@dimen/icon_size_s"
                    android:contentDescription="@null"
                    app:srcCompat="@drawable/vector_turbo_jet"/>
                <TextView
                    android:textSize="@dimen/text_size_m"
                    android:textColor="@color/text_primary"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_highlighted_comments_turbo_welcome_popup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_l"
                    android:layout_marginRight="@dimen/margin_l"
                    android:text="@string/turbo_highlighted_comments"
                    android:layout_alignTop="@+id/iv_highlighted_comments_turbo_welcome_popup"
                    android:layout_alignBottom="@+id/iv_highlighted_comments_turbo_welcome_popup"
                    android:layout_toEndOf="@+id/iv_highlighted_comments_turbo_welcome_popup"
                    android:layout_marginHorizontal="@dimen/margin_l"/>
                <TextView
                    android:textSize="@dimen/text_size_m"
                    android:textColor="@color/text_secundary"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_highlighted_comments_desc_turbo_welcome_popup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_l"
                    android:layout_marginRight="@dimen/margin_l"
                    android:text="@string/turbo_welcome_popup_highlighted_comments_description"
                    android:layout_below="@+id/iv_highlighted_comments_turbo_welcome_popup"
                    android:layout_toEndOf="@+id/iv_highlighted_comments_turbo_welcome_popup"
                    android:layout_marginHorizontal="@dimen/margin_l"/>
            </RelativeLayout>
            <TextView
                android:layout_gravity="center_horizontal"
                android:id="@+id/tv_start_turbo_welcome_popup"
                android:background="@drawable/ripple_turbo_button"
                android:layout_marginTop="@dimen/margin_l"
                android:layout_marginBottom="@dimen/margin_l"
                android:text="@string/turbo_welcome_popup_start"
                android:layout_marginVertical="@dimen/margin_l"
                style="@style/DialogButtonsStyle"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
