<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/core_selector_bg_item_list"
    android:padding="@dimen/margin_m"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="6dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/text_size_s"
            android:textColor="@color/main_light_grey"
            android:layout_gravity="start|center_vertical"
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_delete_notification"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:contentDescription="@null"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/core_vector_cross"/>
    </RelativeLayout>
    <TextView
        android:textSize="@dimen/text_size_m"
        android:textColor="@color/text_primary"
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_m"/>
    <TextView
        android:textSize="@dimen/text_size_m"
        android:textColor="@color/main_light_grey"
        android:id="@+id/tv_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_s"
        android:lineSpacingExtra="8dp"/>
    <LinearLayout
        android:gravity="end"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/text_size_m"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/tv_action_01"
            android:background="@drawable/ripple_blue_primary_button"
            android:paddingLeft="10dp"
            android:paddingTop="6dp"
            android:paddingRight="10dp"
            android:paddingBottom="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="@string/option_button_install"
            android:paddingHorizontal="10dp"
            android:paddingVertical="6dp"/>
        <TextView
            android:textSize="@dimen/text_size_m"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/tv_action_02"
            android:background="@drawable/ripple_blue_primary_button"
            android:paddingLeft="10dp"
            android:paddingTop="6dp"
            android:paddingRight="10dp"
            android:paddingBottom="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="@string/option_button_delete"
            android:paddingHorizontal="10dp"
            android:paddingVertical="6dp"/>
    </LinearLayout>
</LinearLayout>
