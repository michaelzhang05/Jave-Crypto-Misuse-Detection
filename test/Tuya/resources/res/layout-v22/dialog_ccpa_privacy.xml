<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/toolbar_container"
        app:layout_constraintBottom_toTopOf="@+id/sv_container"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/toolbar_main"/>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/sv_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_container">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/medium_text_size"
                android:id="@+id/tv_ccpa_content"
                android:background="@drawable/bg_radius_border"
                android:padding="@dimen/spacing_large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_large"
                android:text="@string/ccpa_content_message"/>
            <CheckBox
                android:textSize="@dimen/medium_text_size"
                android:textColor="@color/defaultTextColor"
                android:id="@+id/chx_ccpa_consent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_large"
                android:layout_marginRight="@dimen/spacing_large"
                android:text="@string/ccpa_consent_message"
                android:buttonTint="@color/colorBlueAccent"
                android:layout_marginHorizontal="@dimen/spacing_large"/>
            <FrameLayout
                android:id="@+id/gbc_fragment_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/container_ccpa_links"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium">
                <TextView
                    android:id="@+id/tv_delete_data_link"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/delete_data"
                    style="@style/CCPALinkTextView"/>
                <TextView
                    android:id="@+id/tv_access_data_link"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/access_data"
                    style="@style/CCPALinkTextView"/>
                <TextView
                    android:id="@+id/tv_privacy_policy_link"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/privacy_policy"
                    style="@style/CCPALinkTextView"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <androidx.cardview.widget.CardView
        android:id="@+id/bottom_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium"
        app:cardElevation="@dimen/spacing_medium"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn_ccpa_consent"
                android:layout_width="@dimen/ccpa_consent_btn_width"
                android:layout_height="@dimen/ccpa_consent_btn_height"
                android:layout_marginTop="@dimen/spacing_small"
                android:layout_marginBottom="@dimen/spacing_small"
                android:text="@string/ccpa_consent_btn_message"
                android:layout_marginEnd="@dimen/spacing_small"
                android:layout_marginVertical="@dimen/spacing_small"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/BlueGrayButtonStyle"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
