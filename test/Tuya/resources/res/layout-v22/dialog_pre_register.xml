<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp">
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/bg_dialog"
            android:padding="@dimen/margin_l"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/text_size_l"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:id="@+id/tv_title_dialog_pre_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pre_registration_title"/>
            <TextView
                android:textSize="@dimen/text_size_m"
                android:textColor="@color/cross_cancel_download"
                android:gravity="center"
                android:id="@+id/tv_description_dialog_pre_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_l"
                android:layout_marginBottom="@dimen/margin_l"
                android:text="@string/login_to_pre_register"
                android:layout_marginVertical="@dimen/margin_l"/>
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/tv_cancel_dialog_pre_register"
                    android:visibility="gone"
                    android:text="@string/dialog_confirmation_verify_negative"
                    android:layout_marginEnd="@dimen/margin_l"
                    style="@style/DialogButtonsStyle"/>
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/tv_ok_dialog_pre_register"
                    android:text="@string/title_login"
                    style="@style/DialogButtonsStyle"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_close_dialog_pre_register"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:contentDescription="@string/close"
        android:layout_alignParentEnd="true"
        android:elevation="5dp"
        app:srcCompat="@drawable/vector_cross_close_popup"/>
</RelativeLayout>
