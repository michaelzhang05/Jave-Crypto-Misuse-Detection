<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape
            android:dither="true"
            android:visible="true"
            android:shape="rectangle"
            android:useLevel="false">
            <solid android:color="@color/wizard_switch_track_off_color"/>
            <corners android:radius="24dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/main_blue"/>
            <size
                android:height="24dp"
                android:width="48dp"/>
        </shape>
    </item>
    <item android:state_checked="true">
        <shape
            android:dither="true"
            android:visible="true"
            android:shape="rectangle"
            android:useLevel="false">
            <solid android:color="@color/wizard_switch_track_on_color"/>
            <corners android:radius="24dp"/>
            <size
                android:height="24dp"
                android:width="48dp"/>
        </shape>
    </item>
</selector>
