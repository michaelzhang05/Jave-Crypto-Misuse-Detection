<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <Preference
        android:title="@string/item_menu_idioma"
        android:key="lang"
        android:order="10"/>
    <PreferenceCategory
        android:title="@string/settings_category_downloads"
        android:key="pc_downloads"
        android:order="20">
        <SwitchPreference
            android:title="@string/solo_wifi"
            android:key="only_wifi"
            android:summary="@string/solo_wifi_desc"
            android:defaultValue="true"/>
        <ListPreference
            android:entries="@array/downloadUpdateOptions"
            android:title="@string/updates"
            android:key="download_updates_options"
            android:summary="%s"
            android:defaultValue="1"
            android:dialogTitle="@string/download_updates_automatically_title"
            android:entryValues="@array/downloadUpdateCodes"/>
        <SwitchPreference
            android:title="@string/pref_auto_update_title"
            android:key="auto_update_apps"
            android:summary="@string/explanation_update_apps_auto"
            android:defaultValue="false"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/pref_category_title_install_as_root_system"
        android:key="pc_root_system"
        android:order="25">
        <SwitchPreference
            android:title="@string/pref_auto_update_title"
            android:key="install_apk_rooted"
            android:summary="@string/pref_auto_update_sumary"
            android:defaultValue="false"/>
        <SwitchPreference
            android:title="@string/pref_install_apk_as_root_system_title"
            android:key="install_apk_as_root_system"
            android:summary="@string/pref_install_apk_as_root_system_summary"
            android:defaultValue="false"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/recibir_notificaciones"
        android:key="pc_notifications"
        android:order="30">
        <Preference
            android:title="@string/recibir_notificaciones"
            android:key="notifications"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/settings_category_storage"
        android:key="pc_storage"
        android:order="40">
        <SwitchPreference
            android:title="@string/delete_apk"
            android:key="delete_apk"
            android:summary="@string/delete_apk_desc"
            android:defaultValue="true"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/settings_category_performance"
        android:key="pc_performance"
        android:order="60">
        <SwitchPreference
            android:title="@string/preference_title_allow_animations"
            android:key="animations"
            android:defaultValue="true"/>
        <SwitchPreference
            android:title="@string/setting_title_floating_downloads_queue"
            android:key="floating_download_queue_active"
            android:summary="@string/setting_summary_floating_downloads_queue"
            android:defaultValue="true"/>
        <ListPreference
            android:entries="@array/setting_play_video_array_options"
            android:title="@string/setting_title_play_video_app_details"
            android:key="autoplay_video"
            android:summary="%s"
            android:defaultValue="0"
            android:entryValues="@array/setting_play_video_array_option_values"/>
        <ListPreference
            android:entries="@array/dataSaverOptions"
            android:title="@string/data_saver_preference_title"
            android:key="data_saver_options"
            android:summary="@string/data_saver_preference_summary"
            android:defaultValue="1"
            android:dialogTitle="@string/data_saver_preference_subtitle"
            android:entryValues="@array/dataSaverCodes"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/settings_category_more_settings"
        android:key="pc_more_settings"
        android:order="70">
        <Preference
            android:title="@string/tos_title"
            android:key="tos"
            android:order="80"/>
        <Preference
            android:title="@string/feedback"
            android:key="feedback"
            android:order="90"/>
        <Preference
            android:title="@string/gdpr_title"
            android:key="gdpr"
            android:order="91"/>
        <Preference
            android:title="@string/about"
            android:key="about"
            android:order="92"/>
        <Preference
            android:title="@string/advertising"
            android:key="advertising"
            android:order="93"/>
        <Preference
            android:title="@string/advanced_settings"
            android:key="advanced"
            android:order="94"/>
    </PreferenceCategory>
</PreferenceScreen>
